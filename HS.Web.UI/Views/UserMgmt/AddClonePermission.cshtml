
@model HS.Entities.PermissionGroup
@{
    Layout = null;
}
@using Localize = HS.Web.UI.Helper.LanguageHelper

<link href="~/Content/Css/UserManagement/AddUserGroup.css" rel="stylesheet" />
<script src="~/Content/Js/Site/Validation.js"></script>
<script src="~/Content/Js/UserManagement/AddCloneUser.js"></script>

<div class="container-fluid add_act_fee_container">

    @Html.HiddenFor(x => x.Id)
  
        <div class="add_acc_fee_head_container">
            <span class="add_acc_fee_head_text">@Localize.T("Add Clone User")</span>
        </div>

    <div class="form-group clearfix">
        <span class="content-type">@Localize.T("Name")<span class="red">*</span></span>
        <div class="txt-form">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", datarequired = "true" })
            <label rel="Name" class="label hidden red position-absolute">*@Localize.T("Name Required")</label>
        </div>
    </div>
</div>

<section class="footer-section">
    <footer class="footer">
        <div class="SaveCancelDiv" style="float:right;">
            <button class="btn" id="SavePermissionGroup"><i class="fa fa-floppy-o" aria-hidden="true"></i> @Localize.T("Clone")</button>
        </div>
    </footer>
</section>

