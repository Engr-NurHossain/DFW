@model HS.Entities.PermissionGroup
@{
    Layout = null;
  
    List<SelectListItem> UserTagList = ViewBag.TagList; 
}
@using Localize = HS.Web.UI.Helper.LanguageHelper
 
<link href="~/Content/Css/UserManagement/AddUserGroup.css" rel="stylesheet" />
<script src="~/Content/Js/Site/Validation.js"></script>
<script src="~/Content/Js/UserManagement/AddUserGroup.js"></script>

<div class="container-fluid add_act_fee_container">

    @Html.HiddenFor(x => x.Id)
    @if (Model.Id > 0)
    {
        <div class="add_acc_fee_head_container">
            <span class="add_acc_fee_head_text">@Localize.T("Edit Permission Group")</span>
        </div>
        @*<div class="form-group">
                <h3>@Localize.T("Edit Activation Fee")</h3>
            </div>*@
    }
    else
    {
        <div class="add_acc_fee_head_container">
            <span class="add_acc_fee_head_text">@Localize.T("New Permission Group")</span>
        </div>
        
    }
     

    <div class="form-group clearfix">
        <span class="content-type">@Localize.T("Name")<span class="red">*</span></span>
        <div class="txt-form">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", datarequired = "true" ,placeholder="Name"})
            <label rel="Name" class="label hidden red position-absolute">*@Localize.T("Name Required")</label>
        </div>
    </div> 
    @foreach (var item in UserTagList)
    {
        <div class="user_tag_list_check">
            <input type="checkbox" class="TypeCheckBox" id="Is_@item.Value" value="@item.Value" /> @item.Text
        </div>
    }

</div>

<section class="footer-section">
    <footer class="footer">
        <div class="SaveCancelDiv">
            <button class="btn" id="SavePermissionGroup"><i class="fa fa-floppy-o" aria-hidden="true"></i> @Localize.T(" Save")</button>
        </div>
    </footer>
</section>
@if (ViewBag.UserTag != "0" || ViewBag.UserTag != "undefined")
{
    <input type="hidden" id="UserTag" value="@ViewBag.UserTag" />
}

       
  
