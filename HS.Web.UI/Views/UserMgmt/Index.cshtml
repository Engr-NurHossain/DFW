@{
    Layout = "~/Views/Shared/_PrivateLayout.cshtml";
}
<script>
    $(document).ready(function () {
        $(".LoaderWorkingDiv").hide();
    })
</script>
@{
    string url = Request.Url.AbsolutePath.ToLower();

    if (url.IndexOf("/userprofile") > -1)
    {
        ViewBag.Title = "User Profile";
        Html.RenderAction("UserProfilePartial", "UserMgmt");
    }
    else if (url.IndexOf("/userinformationrecruit") > -1)
    {
        ViewBag.Title = "Recruit User Detail Info";
        Html.RenderAction("UserInformationRecruit", "UserMgmt", new { id = ViewBag.Id });
    }
    else if (url.IndexOf("/userinformation") > -1){
        ViewBag.Title = "User Detail Info";
        Html.RenderAction("UserInformation", "UserMgmt", new { Id = ViewBag.Id });
    }
}