@{
    Layout = null;
}
@model HS.Entities.PayrollTermSheetManager
@using AppConfig = HS.Framework.Utils.AppConfig;
@using Localize = HS.Web.UI.Helper.LanguageHelper
<link href="~/Content/Select2/select2.css" rel="stylesheet" />
<script src="~/Content/Select2/Select2.min.js"></script>
<link href="~/Content/Css/Payroll/AddPayrollSetting.css" rel="stylesheet" />
<script src="~/Content/Js/Funding/AddPayrollSetting.js"></script>
<script>
    $(document).ready(function () {
        $("#ManagerId").select2();
    });
</script>
<div class="add_sales_matrix_header">
    <div>@Localize.T("Term Sheet Manager")</div>
</div>
<div class="add_sales_matrix_container">
    @Html.HiddenFor(x => x.Id)

    <div class="clearfix">
        <div class="add_sales_matrix_row">
            <label>@Localize.T("Manager")</label>
            <div class="add_sales_matrix_margin">
                @Html.DropDownListFor(x => x.ManagerId, (List<SelectListItem>)ViewBag.EmployeeList, new { @class = "form-control ", datarequired = "true" })
                <label rel="ManagerId" class="label hidden red position-absolute">*@Localize.T("Manager required")</label>
            </div>
        </div>
        <div class="add_sales_matrix_row">
            <label>@Localize.T("Type")</label>
            <div class="add_sales_matrix_margin">
                @Html.DropDownListFor(x => x.Type, (List<SelectListItem>)ViewBag.ManagerValueType, new { @class = "form-control ", datarequired = "true" })
                <label rel="Type" class="label hidden red position-absolute">*@Localize.T("Type required")</label>
            </div>
        </div>
        <div class="add_sales_matrix_row">
            <label>@Localize.T("Value")</label>
            <div class="add_sales_matrix_margin">
                @Html.TextBoxFor(x => x.Value, new { @class = "form-control", datarequired = "true", placeholder = "Percentage" })
                <label rel="Value" class="label hidden red position-absolute">*@Localize.T("Value required")</label>
            </div>
        </div>
    </div>
</div>


<section class="footer-section">
    <footer class="footer">
        <div class="SaveCancelDiv">
            <button class="btn green_button" id="SaveTermSheetManager"><i class="fa fa-floppy-o" aria-hidden="true"></i>@Localize.T(" Save")</button>
        </div>
    </footer>
</section>



