@{
    Layout = null;
}
@model HS.Entities.PayrollCreditRating
@using AppConfig = HS.Framework.Utils.AppConfig;
@using Localize = HS.Web.UI.Helper.LanguageHelper
<link href="~/Content/Css/Payroll/AddPayrollSetting.css" rel="stylesheet" />
<script src="~/Content/Js/Funding/AddPayrollSetting.js"></script>
<div class="add_sales_matrix_header">
    <div>@Localize.T("Credit Rating")</div>
</div>
<div class="add_sales_matrix_container">
    @Html.HiddenFor(x => x.Id)

    <div class="clearfix">
        <div class="add_sales_matrix_row">
            <label>@Localize.T("Min Credit")</label>
            <div class="add_sales_matrix_margin">
                @Html.TextBoxFor(x => x.MinCredit, new { @class = "form-control", datarequired = "true", placeholder = "Min Credit" })
                <label rel="MinCredit" class="label hidden red position-absolute">*@Localize.T("Min Credit required")</label>
            </div>
        </div>
        <div class="add_sales_matrix_row">
            <label>@Localize.T("Max")</label>
            <div class="add_sales_matrix_margin">
                @Html.TextBoxFor(x => x.MaxCredit, new { @class = "form-control", datarequired = "true", placeholder = "MaxCredit" })
                <label rel="MaxCredit" class="label hidden red position-absolute">*@Localize.T("Max Credit required")</label>
            </div>
        </div>
        <div class="add_sales_matrix_row">
            <label>@Localize.T("Point")</label>
            <div class="add_sales_matrix_margin">
                @Html.TextBoxFor(x => x.Point, new { @class = "form-control", datarequired = "true", placeholder = "Point" })
                <label rel="Point" class="label hidden red position-absolute">*@Localize.T("Point required")</label>
            </div>
        </div>
        <div class="add_sales_matrix_row">
            <div class="add_sales_matrix_margin">
                <input type="checkbox" id="ACHBonusWaived" name="IsBase" @(Model.ACHBonusWaived == true ? "checked" : "") />   <label for="ACHBonusWaived">@Localize.T("ACH Bonus Waived")</label>
            </div>
        </div>
    </div>
</div>


<section class="footer-section">
    <footer class="footer">
        <div class="SaveCancelDiv">
            <button class="btn green_button" id="SaveCreditRating"><i class="fa fa-floppy-o" aria-hidden="true"></i>@Localize.T(" Save")</button>
        </div>
    </footer>
</section>


