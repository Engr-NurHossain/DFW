
@{
    Layout = null;
}
@model  List<HS.Entities.ReportModel>
@using Localize = HS.Web.UI.Helper.LanguageHelper

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    
    @Styles.Render("~/styles/exportconfirm") 

    <script>
        var SelectAllIds = `@ViewBag.Ids`;
        var UserList = `@(ViewBag.Ids)`;
        var FilterUser = `@ViewBag.FilterUser`;
        var UsersList = `@(ViewBag.Users)`;

    </script>
    @Scripts.Render("~/scripts/exportconfirm")
     
</head>
<body>
    <div class="export_confirm_container">
        <div class="sub-header">
            Export as excel file
            <img title="@Localize.T("Close")" class="cross-image cursor-pointer" onclick="parent.$.magnificPopup.close();" src="~/Content/Icons/cross_update.png" />
        </div>
        <div class="MainDiv">
            <div class="container-div">
                <table class="export_excel_table" border="1">
                    <thead>
                        <tr>
                            <th>@Localize.T("Select Column")</th>
                            <th>@Localize.T("Export Record")</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="export_excel_device_header">@Localize.T("Select Column")</div>

                                <div class="export_confirm_content">
                                    <div class="number_one" style="width:100%">
                                        <label for="SelectAll" class="label-cbx">
                                            <input id="SelectAll" idval="SelectAll" type="checkbox" name="SelectAll" class="invisible">
                                            <div class="checkbox">
                                                <svg width="20px" height="20px" viewBox="0 0 20 20">
                                                    <path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
                                                    <polyline points="4 11 8 15 16 6"></polyline>
                                                </svg>
                                            </div>
                                            <b>Select all column</b>
                                        </label>
                                    </div>
                                    @if (ViewBag.ReporFor == "Customer")
                                    {
                                        <div class="number_three NumberPrefixItem">
                                            @Html.DropDownList("ListNumberPrefix", ViewBag.NumberPrefix as List<SelectListItem>, new { @class = "form-control" })
                                        </div>
                                        <div class="number_four">
                                            <select id="CancelCustomerFilter" class="form-control">
                                                <option value="">Status</option>
                                                <option value="1">Active</option>
                                            </select>
                                        </div>
                                    }
                                    <div class="export_excel_radio_div">
                                        <label><input type="radio" name="ImportType" value="excel">Excel</label>
                                        <label><input type="radio" name="ImportType" value="pdf">Pdf</label>
                                    </div>
                                </div>

                                <div class="contents">
                                    @foreach (var item in Model)
                                    {
                                        <div class="item">
                                            <span>
                                                <label for="@item.Value" class="label-cbx">
                                                    <input id="@item.Value" idval="@item.Value" type="checkbox" class="CheckItems invisible" value="@item.Value">
                                                    <div class="checkbox">
                                                        <svg width="20px" height="20px" viewBox="0 0 20 20">
                                                            <path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
                                                            <polyline points="4 11 8 15 16 6"></polyline>
                                                        </svg>
                                                    </div>
                                                    @item.Name
                                                </label>
                                            </span>
                                        </div>
                                    }
                                </div>
                            </td>
                            <td class="export_right_side_desktop">
                                <div class="export_excel_device_header">@Localize.T("Export Record")</div>
                                <div class="contents_right_side">
                                    <div class="item">
                                        <span>
                                            <label for="ExportAll" class="label-cbx">
                                                <input id="ExportAll" idval="ExportAll" type="radio" class="CheckExpItems invisible" value="1" name="exporttype">
                                                <div class="checkbox">
                                                    <svg width="20px" height="20px" viewBox="0 0 20 20">
                                                        <path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
                                                        <polyline points="4 11 8 15 16 6"></polyline>
                                                    </svg>
                                                </div>
                                                @Localize.T("Export All")
                                            </label>
                                        </span>
                                    </div>
                                    <div class="item">
                                        <span>
                                            <label for="ExportFilter" class="label-cbx">
                                                <input id="ExportFilter" idval="ExportFilter" type="radio" class="CheckExpItems invisible" value="2" name="exporttype">
                                                <div class="checkbox">
                                                    <svg width="20px" height="20px" viewBox="0 0 20 20">
                                                        <path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
                                                        <polyline points="4 11 8 15 16 6"></polyline>
                                                    </svg>
                                                </div>
                                                @Localize.T("Export Filtered Record")
                                            </label>
                                        </span>
                                    </div>
                                    <div class="item">
                                        <span>
                                            <label for="ExportSelected" class="label-cbx">
                                                <input id="ExportSelected" idval="ExportSelected" type="radio" class="CheckExpItems invisible" value="3" name="exporttype">
                                                <div class="checkbox">
                                                    <svg width="20px" height="20px" viewBox="0 0 20 20">
                                                        <path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
                                                        <polyline points="4 11 8 15 16 6"></polyline>
                                                    </svg>
                                                </div>
                                                @Localize.T("Export Selected Record")
                                            </label>
                                        </span>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="footer">
                    <div class="buttons">
                        <button class="button cancelbutton cursor-pointer" onclick="parent.$.magnificPopup.close();">Cancel</button>
                        <button class="button okbutton cursor-pointer" id="OkButton">Download</button>
                    </div>
                    <div class="item">
                        <span>
                            <label for="ExportDatabseSelected" class="label-cbx">
                                <input id="ExportDatabseSelected" idval="ExportDatabseSelected" type="checkbox" class="CheckExpDatabaseItems invisible" value="3" name="exporttype">
                                <div class="checkbox">
                                    <svg width="20px" height="20px" viewBox="0 0 20 20">
                                        <path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
                                        <polyline points="4 11 8 15 16 6"></polyline>
                                    </svg>
                                </div>
                                @Localize.T("Export All Database Record")
                            </label>
                        </span>
                    </div>
                </div>

            </div>
        </div>
        <div class="hidden">
            @if (ViewBag.IdList != null && ViewBag.IdList != "")
            {
                string Idlstring = (string)ViewBag.IdList;
                string[] IdList = Idlstring.Split(',');
                foreach (string id in IdList)
                {
                    <input type="hidden" class="Ids" value="@id" />
                }
            }

            <input type="hidden" id="ReportFor" value="@ViewBag.ReporFor" />
        </div>
    </div>
</body>
</html>
