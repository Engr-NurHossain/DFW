@{
    Layout = null;
}
@using Localize = HS.Web.UI.Helper.LanguageHelper
@using PermissionChekcer = HS.Web.UI.Helper.PermissionHelper
@using Permissions = HS.Framework.UserPermissions

<script>
        String.prototype.replaceAll = function (search, replacement) {
            var target = this;
            return target.split(search).join(replacement);
        };
        var TabsLoaderText = "<div class='invoice-loader'><div><div class='lds-css ng-scope'><div style='margin:auto; z-index:99;' class='lds-double-ring'><div></div><div></div></div></div></div></div>";


        var LoadLaborCostingReportTab = function () {
            $("#LaborCostingReportTab").html(TabsLoaderText);
            $("#LaborCostingReportTab").load(domainurl + "/Reports/LaborCostingPartial");
        }

        var LoadMaterialCostingReportTab = function () {
            $("#MaterialCostingReportTab").html(TabsLoaderText);
            $("#MaterialCostingReportTab").load(domainurl + "/Reports/MaterialCostingPartial");
        }

        var LoadCustomerCostingReportTab = function () {
            $("#CustomerCostingReportTab").html(TabsLoaderText);
            $("#CustomerCostingReportTab").load(domainurl + "/Reports/CustomerCostingPartial");
        }

        $(document).ready(function () {
            $(".LoaderWorkingDiv").hide();
            $("#JobCostingReportTab").html(TabsLoaderText);
            $("#JobCostingReportTab").load(domainurl + "/Reports/JobCostingPartial");

            $(".LaborCostingReportTab").click(function () {
                LoadLaborCostingReportTab();
            });

            $(".MaterialCostingReportTab").click(function () {
                LoadMaterialCostingReportTab();
            });
            $(".CustomerCostingReportTab").click(function () {
                LoadCustomerCostingReportTab();
            });

        })

    </script>

<link href="~/Content/Css/Report/ReportsPartial.css" rel="stylesheet" />
<div class="ReportsTitle">
    @Localize.T("Reports")
    <div class="dateviewed">
        @{Html.RenderAction("DateViewPartial", "Customer");}
    </div>
</div>


<div class="col-xs-12 Report-Tabs">
    <div class="nav-detail-contents">
        <ul class="nav nav-tabs reports-tabs" id="myTab">
            <li class="active JobCostingReportTab">
                <a data-target="#JobCostingReportTab" data-toggle="tab">@Localize.T("Job Costing")</a>
            </li>
            <li class="LaborCostingReportTab">
                <a tabname="#LaborCostingReportTab" data-target="#LaborCostingReportTab" data-toggle="tab">@Localize.T("Labor Costing")</a>
            </li>
            <li class="MaterialCostingReportTab">
                <a tabname="#MaterialCostingReportTab" data-target="#MaterialCostingReportTab" data-toggle="tab">@Localize.T("Material Costing")</a>
            </li>
            <li class="CustomerCostingReportTab">
                <a tabname="#CustomerCostingReportTab" data-target="#CustomerCostingReportTab" data-toggle="tab">@Localize.T("Customers")</a>
            </li>
        </ul>

        <div class="tab-content reports_tab_content">

            <div class="tab-pane active" id="JobCostingReportTab">

            </div>

            <div class="tab-pane" id="LaborCostingReportTab">

            </div>

            <div class="tab-pane" id="MaterialCostingReportTab">

            </div>

            <div class="tab-pane" id="CustomerCostingReportTab">

            </div>

        </div>
    </div>

</div>

