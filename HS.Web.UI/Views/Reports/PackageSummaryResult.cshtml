@{
    Layout = null;
    string Currency = HS.Web.UI.Helper.LabelHelper.CurrentTransMakeCurrency.MakeCurrency(null);
}
@using Localize = HS.Web.UI.Helper.LanguageHelper
@model List<HS.Entities.PackageSummaryModel>
<div>
    <table class="loadticketreportlist_table">
        <thead class="table-head-border">
            <tr>
                <th class="thead-th-style">
                    <div>@Localize.T("Customer Name")</div>
                    <div><i class="fa fa-angle-up icon_sort_timeclock" data-val="ascending/invoiceid"></i> <i class="fa fa-angle-down icon_sort_timeclock" data-val="descending/invoiceid"></i></div>
                </th>
                <th class="thead-th-style">
                    <div>@Localize.T("Booking#")</div>
                    <div><i class="fa fa-angle-up icon_sort_timeclock" data-val="ascending/invoiceid"></i> <i class="fa fa-angle-down icon_sort_timeclock" data-val="descending/invoiceid"></i></div>
                </th>
                <th class="thead-th-style">
                    <div>@Localize.T("Package Name")</div>
                    <div><i class="fa fa-angle-up icon_sort_timeclock" data-val="ascending/invoiceid"></i> <i class="fa fa-angle-down icon_sort_timeclock" data-val="descending/invoiceid"></i></div>
                </th>
                <th class="thead-th-style">
                    <div>@Localize.T("Rug Qty")</div>
                    <div><i class="fa fa-angle-up icon_sort_timeclock" data-val="ascending/invoiceid"></i> <i class="fa fa-angle-down icon_sort_timeclock" data-val="descending/invoiceid"></i></div>
                </th>
                <th class="thead-th-style">
                    <div>@Localize.T("Rug Shape")</div>
                    <div><i class="fa fa-angle-up icon_sort_timeclock" data-val="ascending/invoiceid"></i> <i class="fa fa-angle-down icon_sort_timeclock" data-val="descending/invoiceid"></i></div>
                </th>
                <th class="thead-th-style">
                    <div>@Localize.T("Value")</div>
                    <div><i class="fa fa-angle-up icon_sort_timeclock" data-val="ascending/invoiceid"></i> <i class="fa fa-angle-down icon_sort_timeclock" data-val="descending/invoiceid"></i></div>
                </th>
                <th class="thead-th-style">
                    <div>@Localize.T("Paid/Unpaid")</div>
                    <div><i class="fa fa-angle-up icon_sort_timeclock" data-val="ascending/invoiceid"></i> <i class="fa fa-angle-down icon_sort_timeclock" data-val="descending/invoiceid"></i></div>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="tr-style">
                    <td class="table-body-td-style" valign="top"><a href="/Customer/Customerdetail/?id=@item.CustomerId">@item.CustomerName</a></td>
                    <td class="table-body-td-style" valign="top"><span onclick="OpenBkById(@item.BookingIntId)" class="cus-anchor">@item.BookingId</span></td>
                    <td class="table-body-td-style" valign="top">@item.PackageName</td>
                    <td class="table-body-td-style" valign="top">@item.RugQty</td>
                    <td class="table-body-td-style" valign="top">@item.RugShape</td>
                    <td class="table-body-td-style" valign="top">@Currency@HS.Web.UI.Helper.LabelHelper.FormatAmount(item.Value)</td>
                    <td class="table-body-td-style" valign="top">@(item.IsPaid?"yes":"no")</td>
                </tr>
            }
        </tbody>
    </table>

</div>
