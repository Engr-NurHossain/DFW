                        </div>
                    </td>
                    <td class="table-body-td-style" valign="top">
                        <div class="ticket_list_partial_device_header">@Localize.T("$")</div>
                        <div class="ticket_list_partial_device_info">
                            $@string.Format("{0:#,##0.00}", item.InvoiceAmount)
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
