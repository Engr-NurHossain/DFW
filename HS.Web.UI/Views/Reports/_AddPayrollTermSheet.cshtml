@{
    Layout = null;
}
@model HS.Entities.PayrollTermSheet
@using AppConfig = HS.Framework.Utils.AppConfig;
@using Localize = HS.Web.UI.Helper.LanguageHelper
<link href="~/Content/Css/Payroll/AddPayrollSetting.css" rel="stylesheet" />
<script src="~/Content/Js/Funding/AddPayrollSetting.js"></script>
<div class="add_sales_matrix_header">
    <div>@Localize.T("Term Sheet")</div>
</div>
<div class="add_sales_matrix_container">
    @Html.HiddenFor(x => x.Id)

    <div class="clearfix">
        <div class="add_sales_matrix_row">
            <label>@Localize.T("Name")</label>
            <div class="add_sales_matrix_margin">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", datarequired = "true", placeholder = "Name" })
                <label rel="Name" class="label hidden red position-absolute">*@Localize.T("Name required")</label>
            </div>
        </div>
        <div class="add_sales_matrix_row">
          
            <div class="add_sales_matrix_margin">
                    <input type="checkbox" id="IsBase" name="IsBase" @(Model.IsBase == true ? "checked" : "") />   <label for="IsBase">@Localize.T("Is Standard")</label>
               
            </div>
        </div>
    </div>
</div>
<section class="footer-section">
    <footer class="footer">
        <div class="SaveCancelDiv">
            <button class="btn green_button" id="SaveTermSheet"><i class="fa fa-floppy-o" aria-hidden="true"></i>@Localize.T(" Save")</button>
        </div>
    </footer>
</section>


