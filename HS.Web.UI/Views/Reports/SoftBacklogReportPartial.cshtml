@{
    Layout = null;
}
@using Localize = HS.Web.UI.Helper.LanguageHelper

<script>
    String.prototype.replaceAll = function (search, replacement) {
        var target = this;
        return target.split(search).join(replacement);
    };
    var TabsLoaderText = "<div class='invoice-loader'><div><div class='lds-css ng-scope'><div style='margin:auto; z-index:99;' class='lds-double-ring'><div></div><div></div></div></div></div></div>";
    $(document).ready(function () {
        $(".LoaderWorkingDiv").hide();
        $("#LeadReportTab").html(TabsLoaderText);
        $("#LeadReportTab").load(domainurl + "/Reports/LoadSoftBacklogReportPartial?pageno=1&pagesize=50&OppType=SoftBacklog");

        $(".LeadReportTab").click(function () {
            $("#LeadReportTab").html(TabsLoaderText);
            $("#LeadReportTab").load(domainurl + "/Reports/LoadSoftBacklogReportPartial?pageno=1&pagesize=50&OppType=SoftBacklog");
        });
        $(".ClosedWonTab").click(function () {
            $("#ClosedWonTab").html(TabsLoaderText);
            $("#ClosedWonTab").load(domainurl + "/Reports/LoadClosedWonReportPartial?pageno=1&pagesize=50&OppType=SoftBacklog");
        });
        $(".ClosedLostTab").click(function () {
            $("#ClosedLostTab").html(TabsLoaderText);
            $("#ClosedLostTab").load(domainurl + "/Reports/LoadClosedLostReportPartial?pageno=1&pagesize=50&OppType=SoftBacklog");
        });
        $(".AgedTab").click(function () {
            $("#AgedTab").html(TabsLoaderText);
            $("#AgedTab").load(domainurl + "/Reports/LoadAgedReportPartial?pageno=1&pagesize=50&OppType=SoftBacklog");
        });
    });

</script>

<link href="~/Content/Css/Report/ReportsPartial.css" rel="stylesheet" />
<div class="reports_partial_container">
    <div class="dateviewed">
        @{Html.RenderAction("DateViewPartial", "Customer");}
    </div>

    <div class="col-xs-12 Report-Tabs">
        <div class="nav-detail-contents">
            <ul class="nav nav-tabs reports-tabs" id="myTab">
                <li class="active LeadReportTab">
                    <a data-target="#LeadReportTab" data-toggle="tab">@Localize.T("Soft Backlog Report")</a>
                </li>
                <li class="ClosedWonTab">
                    <a data-target="#ClosedWonTab" data-toggle="tab">@Localize.T("Closed Won")</a>
                </li>
                <li class="ClosedLostTab">
                    <a data-target="#ClosedLostTab" data-toggle="tab">@Localize.T("Closed Lost")</a>
                </li>
                <li class="AgedTab">
                    <a data-target="#AgedTab" data-toggle="tab">@Localize.T("Aged")</a>
                </li>
            </ul>
            <div class="tab-content reports_tab_content">
                <div class="tab-pane active" id="LeadReportTab">

                </div>
                <div class="tab-pane" id="ClosedWonTab">

                </div>
                <div class="tab-pane" id="ClosedLostTab">

                </div>
                <div class="tab-pane" id="AgedTab">

                </div>
            </div>
        </div>

    </div>
</div>




