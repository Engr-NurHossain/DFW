@{
    Layout = null;
}
@model HS.Entities.PayrollSingleItemSettings
@using AppConfig = HS.Framework.Utils.AppConfig;
@using Localize = HS.Web.UI.Helper.LanguageHelper
<link href="~/Content/Css/Payroll/AddPayrollSetting.css" rel="stylesheet" />
<script src="~/Content/Js/Funding/AddPayrollSetting.js"></script>
<div class="add_sales_matrix_header">
    <div>@Localize.T("Settings")</div>
</div>
<div class="add_sales_matrix_container">
    @Html.HiddenFor(x => x.Id)

    <div class="clearfix">
        <div class="add_sales_matrix_row">
            <label>@Localize.T("Key")</label>
            <div class="add_sales_matrix_margin">
                @Html.TextBoxFor(x => x.SearchKey, new { @class = "form-control", datarequired = "true", placeholder = "Key" })
                <label rel="SearchKey" class="label hidden red position-absolute">*@Localize.T("Key required")</label>
            </div>
        </div>
        <div class="add_sales_matrix_row">
            <label>@Localize.T("Value")</label>
            <div class="add_sales_matrix_margin">
              
                    @Html.TextBoxFor(x => x.SearchValue, new { @class = "form-control", datarequired = "true", placeholder = "Value" })
                    <label rel="SearchValue" class="label hidden red position-absolute">*@Localize.T("Value required")</label>
              
            </div>
        </div>
    </div>
</div>


<section class="footer-section">
    <footer class="footer">
        <div class="SaveCancelDiv">
            <button class="btn green_button" id="SaveSingleItemSettings"><i class="fa fa-floppy-o" aria-hidden="true"></i>@Localize.T(" Save")</button>
        </div>
    </footer>
</section>

