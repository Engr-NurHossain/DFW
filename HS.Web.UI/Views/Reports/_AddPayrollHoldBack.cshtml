@{
    Layout = null;
}
@model HS.Entities.PayrollHoldBack
@using AppConfig = HS.Framework.Utils.AppConfig;
@using Localize = HS.Web.UI.Helper.LanguageHelper
<link href="~/Content/Css/Payroll/AddPayrollSetting.css" rel="stylesheet" />
<script src="~/Content/Js/Funding/AddPayrollSetting.js"></script>
<div class="add_sales_matrix_header">
    <div>@Localize.T("Hold Back")</div>
</div>
<div class="add_sales_matrix_container">
    @Html.HiddenFor(x => x.Id)

    <div class="clearfix">
        <div class="add_sales_matrix_row">
            <label>@Localize.T("HoldBack")</label>
            <div class="add_sales_matrix_margin">
                @Html.DropDownListFor(x => x.HoldBack, (List<SelectListItem>)ViewBag.PayrollHoldBack, new { @class = "form-control ", datarequired = "true" })
                <label rel="HoldBack" class="label hidden red position-absolute">*@Localize.T("Hold Back required")</label>
            </div>
        </div>
        <div class="add_sales_matrix_row">
            <label>@Localize.T("Type")</label>
            <div class="add_sales_matrix_margin">
                @Html.DropDownListFor(x => x.Type, (List<SelectListItem>)ViewBag.PayrollHoldBackType, new { @class = "form-control ", datarequired = "true" })
                <label rel="Type" class="label hidden red position-absolute">*@Localize.T("Hold Back Type required")</label>
            </div>
        </div>
        <div class="add_sales_matrix_row">
            <label>@Localize.T("Value")</label>
            <div class="add_sales_matrix_margin">
                @Html.TextBoxFor(x => x.Percentage, new { @class = "form-control", datarequired = "true", placeholder = "Percentage" })
                <label rel="Percentage" class="label hidden red position-absolute">*@Localize.T("Percentage required")</label>
            </div>
        </div>
    </div>
</div>


<section class="footer-section">
    <footer class="footer">
        <div class="SaveCancelDiv">
            <button class="btn green_button" id="SaveHoldBack"><i class="fa fa-floppy-o" aria-hidden="true"></i>@Localize.T(" Save")</button>
        </div>
    </footer>
</section>



