<script>
    var TabsLoaderText = "<div class='invoice-loader'><div><div class='lds-css ng-scope'><div style='margin:auto; z-index:99;' class='lds-double-ring'><div></div><div></div></div></div></div></div>";
    var tickettype = '@Html.Raw(Json.Encode(@ViewBag.tikettype))';
    tickettype = JSON.parse(tickettype);
    var statustiket = '@Html.Raw(Json.Encode(@ViewBag.statustiket))';
    statustiket = JSON.parse(statustiket);
    var assignticket = '@Html.Raw(Json.Encode(@ViewBag.assignticket))';
    assignticket = JSON.parse(assignticket);
    var pagesize = 20;
    var TicketListLoad = function (pageNo, order) {

        console.log(order);
        if (typeof (pageNo) != "undefined") {


            var AssignedSearch = encodeURI($("#Assigned_search").val());
            var TicketTypeSearch = $("#TicketType_Search").val();
            var TicketStatusSearch = $("#Ticket_Status_Search").val();
            var MyTicketSearch = $("#TicketFor_search").val();
            var DateFrom = $(".min-date").val();
            var DateTo = $(".max-date").val();
            var SearchText = encodeURI($("#searchtext").val());

            var id = $("#ticket_id").val();
            var cusid = $("#customer_id").val();
            var user = $("#sales_person").val();
            var convertmindate = $("#completion_min_date").val();
            var convertmaxdate = $("#completion_max_date").val();
            var createmindate = $("#sold_min_date").val();
            var createmaxdate = $("#sold_max_date").val();
            var transfermindate = $("#install_min_date").val();
            var transfermaxdate = $("#install_max_date").val();
            var ticketcreateddatemin = $("#appointment_createmindate").val();
            var ticketcreateddatemax = $("#appointment_createmaxdate").val();
            console.log(DateFrom);
            console.log(pageNo);
            $(".app_date_table").html(TabsLoaderText);
            $(".app_date_table").load(domainurl + "/Reports/TicketReportAppointmentList", { PageNo: pageNo, PageSize: pagesize, SearchText: SearchText, order: order, StartDate: DateFrom, EndDate: DateTo, TicketType: encodeURI(TicketTypeSearch), TicketStatus: encodeURI(TicketStatusSearch), AssignedUserTicket: AssignedSearch, MyTicket: MyTicketSearch, convertmindate: encodeURI(convertmindate), convertmaxdate: encodeURI(convertmaxdate), createmindate: encodeURI(createmindate), createmaxdate: encodeURI(createmaxdate), transfermindate: encodeURI(transfermindate), transfermaxdate: encodeURI(transfermaxdate), user: encodeURI(user), cusid: encodeURI(cusid), id: encodeURI(id), ticketcreateddatemax: encodeURI(ticketcreateddatemax), ticketcreateddatemin: encodeURI(ticketcreateddatemin) });
           //$(".app_date_table").load(domainurl + "/Reports/TicketReportAppointmentList/?PageNo="+ pageNo + "&PageSize=" + pagesize + "&SearchText=" + SearchText + "&order=" + order + "&StartDate=" + DateFrom + "&EndDate=" + DateTo + "&TicketType=" + encodeURI(TicketTypeSearch) + "&TicketStatus=" + encodeURI(TicketStatusSearch) + "&AssignedUserTicket=" + AssignedSearch + "&MyTicket=" + MyTicketSearch +"&convertmindate=" +encodeURI(convertmindate) + "&convertmaxdate="+encodeURI(convertmaxdate)+"&createmindate="+encodeURI(createmindate) +"&createmaxdate="+encodeURI(createmaxdate)+"&transfermindate="+encodeURI(transfermaxdate) + "&user="+encodeURI(user) +"&cusid="+encodeURI(cusid)+"&id="+encodeURI(id)+"&ticketcreateddatemax="+encodeURI(ticketcreateddatemax)+"&ticketcreateddatemin="+encodeURI(ticketcreateddatemin));

        }
    }
    var ResetFilter = function () {
        $(".convert_cus_inp").val("");
        $(".convert_cus_inp_drp").selectpicker("val", "");
        $(".convert_cus_inp_drp").val("-1");
        $("#searchtext").val("");
        TicketListLoad(1);
    }
    $(document).ready(function () {
        TicketListLoad(1);
        console.log(tickettype);
        $('[data-toggle="tooltip"]').tooltip();

        $(".search_ticket_btn").click(function(){
            TicketListLoad(1);
        });
        $(".DateFilterContents .btn-apply-Datefilter").click(function () {    

        if (top.location.hash != "") {
            if (top.location.hash == "#AppointmentDateReportTab") {
                UpdatePtoCookie();
                TicketListLoad(1);
                var StartDate = my_date_format($(".DateFilterContents .min-date").val());
        var EndDate = my_date_format($(".DateFilterContents .max-date").val())
        if (StartDate == "NaN undefined, NaN") {
            StartDate = "All Time";
            EndDate = "";
        }

        $(".DateFilterContents .date-start").html("");
        $(".DateFilterContents .date-end").html("");
        $(".DateFilterContents .date-start").html(StartDate);
        $(".DateFilterContents .date-end").html(EndDate);
        $(".DateFilterContents .dropdown-filter").hide();
            }
        }
        else {
            UpdatePtoCookie();
            TicketListLoad(1);
            var StartDate = my_date_format($(".DateFilterContents .min-date").val());
        var EndDate = my_date_format($(".DateFilterContents .max-date").val())
        if (StartDate == "NaN undefined, NaN") {
            StartDate = "All Time";
            EndDate = "";
        }

        $(".DateFilterContents .date-start").html("");
        $(".DateFilterContents .date-end").html("");
        $(".DateFilterContents .date-start").html(StartDate);
        $(".DateFilterContents .date-end").html(EndDate);
        $(".DateFilterContents .dropdown-filter").hide();
        }
    });

        $('.ticket_search_text').keypress(function (e) {
            var key = e.which;
            if (key == 13)
            {
                TicketListLoad(1);
            }
        });
        $(".icon_sort_timeclock").click(function () {
            var orderval = $(this).attr('data-val');
            TicketListLoad(pageno, orderval);
        })
        if (tickettype.length != 0)
        {
            $("#TicketType_Search").selectpicker('val', tickettype);
        }
        else {
            $("#TicketType_Search").selectpicker('val', '');
        }
        if (statustiket.length != 0)
        {
            $("#Ticket_Status_Search").selectpicker('val', statustiket);
        }
        else {
            $("#Ticket_Status_Search").selectpicker('val', '');
        }
        if (assignticket.length != 0)
        {
            $("#Assigned_search").selectpicker('val', assignticket);
        }
        else {
            $("#Assigned_search").selectpicker('val', '');
        }

        $("#btnDownloadticketReport").click(function () {
            var id = $("#ticket_id").val();
            var cusid = $("#customer_id").val();
            var user = $("#sales_person").val();
            var convertmindate = $("#completion_min_date").val();
            var convertmaxdate = $("#completion_max_date").val();
            var createmindate = $("#sold_min_date").val();
            var createmaxdate = $("#sold_max_date").val();
            var transfermindate = $("#install_min_date").val();
            var transfermaxdate = $("#install_max_date").val();
            var ticketcreateddatemin = $("#appointment_createmindate").val();
            var ticketcreateddatemax = $("#appointment_createmaxdate").val();
            location.href = domainurl + "/Reports/TicketReportPartial/?GetReport=true" + "&SearchText=" + $(".ticket_search_text").val() + "&TicketType=" + $("#TicketType_Search").val() + "&TicketStatus=" + $("#Ticket_Status_Search").val() + "&AssignedUserTicket=" + $("#Assigned_search").val() + "&RepType=AppointmentDate" + "&id=" + encodeURI(id) + "&cusid=" + encodeURI(cusid) + "&user=" + encodeURI(user) + "&convertmindate=" + encodeURI(convertmindate) + "&convertmaxdate=" + encodeURI(convertmaxdate) + "&createmindate=" + encodeURI(createmindate) + "&createmaxdate=" + encodeURI(createmaxdate) + "&transfermindate=" + encodeURI(transfermindate) + "&transfermaxdate=" + encodeURI(transfermaxdate) +"&ticketcreateddatemax=" + encodeURI(ticketcreateddatemax) +"&ticketcreateddatemin="+ encodeURI(ticketcreateddatemin);
        });

        new Pikaday({ format: 'MM/DD/YYYY', field: $('#completion_min_date')[0] });
        new Pikaday({ format: 'MM/DD/YYYY', field: $('#completion_max_date')[0] });

        new Pikaday({ format: 'MM/DD/YYYY', field: $('#sold_min_date')[0] });
        new Pikaday({ format: 'MM/DD/YYYY', field: $('#sold_max_date')[0] });

        new Pikaday({ format: 'MM/DD/YYYY', field: $('#install_min_date')[0] });
        new Pikaday({ format: 'MM/DD/YYYY', field: $('#install_max_date')[0] });

         new Pikaday({ format: 'MM/DD/YYYY', field: $('#appointment_createmindate')[0] });
        new Pikaday({ format: 'MM/DD/YYYY', field: $('#appointment_createmaxdate')[0] });


        $(".convert_cus_report_filter").hide();
        $("#convert_cus_filterbtn").click(function () {
            console.log("filter");
            if ($(".convert_cus_report_filter").is(":visible")) {
                $(".convert_cus_report_filter").hide();

            } else {
                $(".convert_cus_report_filter").show();

            }
        });
        $(document).click(function (e) {
            if ($($(e.target).parent().parent()).hasClass('convert_cus_div')
                        || $($(e.target).parent()).hasClass('convert_cus_div')
                        || $($(e.target).parent().parent()).hasClass('convert_cus_div')) {
                return;
            }
            else if ($(".convert_cus_report_filter").is(":visible")) {
                $(".convert_cus_report_filter").hide();
            }
        });
    });
</script>

<div class="page-content-wrap cus-padding-top10p invoicelist">
    <div class="FilterFunding clearfix">
        <div class="app_date_search_filter ld_ticket_report_top_bar">
            <div class="input-group add-on convert_cus_div">
                <input value="@Model.Searchtext" class="form-control filterinput border_radius_0 ticket_search_text" id="searchtext" placeholder="Search By Ticket Id, Customer Id">
                <div class="input-group-btn"><button class="btn search_ticket_btn green_button" id="btnsearchtext" title="@Localize.T("Search")"><i class="glyphicon glyphicon-search"></i></button></div>
            </div>
            <button class="btn convert_cus_div page_filter_btn" id="convert_cus_filterbtn"><span title="Filter" class="glyphicon glyphicon-filter"></span></button>

            @if (PermissionChekcer.IsPermitted(Permissions.CustomerPermissions.TicketReportDownLoadButton))
            {
                <button title="@Localize.T("Download")" class="report_btn lrp_float_right" id="btnDownloadticketReport"><i class="fa fa-download" aria-hidden="true"></i></button>
            }
        </div>
        <div class="convert_cus_report_filter">
            <div class="convert_cus_report_filte_innerr convert_cus_div">
                <div class="form-group clearfix">
                    <label>@Localize.T("Ticket ID")</label>
                    <input class="form-control convert_cus_inp" placeholder="Ticket ID" id="ticket_id" />
                </div>
                <div class="form-group clearfix">
                    <label>@Localize.T("Customer ID")</label>
                    <input class="form-control convert_cus_inp" placeholder="Customer ID" id="customer_id" />
                </div>
                <div class="form-group clearfix">
                    <label>@Localize.T("Ticket Type")</label>
                    @Html.DropDownListFor(x => x.TicketType, ViewBag.TicketType as List<SelectListItem>, new { @class = "form-control border_radius_0 TicketType_Search convert_cus_inp_drp", id = "TicketType_Search", @multiple = "multiple", @title = "Ticket Type" })
                </div>
                <div class="form-group clearfix">
                    <label>@Localize.T("Ticket Status")</label>
                    @Html.DropDownListFor(x => x.TicketStatus, ViewBag.TicketStatus as List<SelectListItem>, new { @class = "form-control border_radius_0 Ticket_Status_Search convert_cus_inp_drp", id = "Ticket_Status_Search", @multiple = "multiple", @title = "Ticket Status" })
                </div>
                <div class="form-group clearfix">
                    <label>@Localize.T("Assigned User")</label>
                    @Html.DropDownListFor(x => x.Assigned, ViewBag.EmployeeList as List<SelectListItem>, new { @class = "form-control border_radius_0 Assigned_search convert_cus_inp_drp", id = "Assigned_search", @multiple = "multiple", @title = "Assigned User" })
                </div>
                <div class="form-group clearfix">
                    <label>@Localize.T("Sales Person")</label>
                    @Html.DropDownList("sales_person", ViewBag.salesperson as List<SelectListItem>, new { @class = "form-control convert_cus_inp_drp", @title = "Sales Person" })
                </div>
                <div class="form-group clearfix">
                    <label>@Localize.T("Scheduled On Min Date")</label>
                    <input class="form-control convert_cus_inp" placeholder="Scheduled On Min Date" id="completion_min_date" />
                </div>
                <div class="form-group clearfix">
                    <label>@Localize.T("Scheduled On Max Date")</label>
                    <input class="form-control convert_cus_inp" placeholder="Scheduled On Max Date" id="completion_max_date" />
                </div>
                <div class="form-group clearfix">
                    <label>@Localize.T("Sold Min Date")</label>
                    <input class="form-control convert_cus_inp" placeholder="Sold Min Date" id="sold_min_date" />
                </div>
                <div class="form-group clearfix">
                    <label>@Localize.T("Sold Max Date")</label>
                    <input class="form-control convert_cus_inp" placeholder="Sold Max Date" id="sold_max_date" />
                </div>
                <div class="form-group clearfix">
                    <label>@Localize.T("Install Min Date")</label>
                    <input class="form-control convert_cus_inp" placeholder="Install Min Date" id="install_min_date" />
                </div>
                <div class="form-group clearfix">
                    <label>@Localize.T("Install Max Date")</label>
                    <input class="form-control convert_cus_inp" placeholder="Install Max Date" id="install_max_date" />
                </div>
                <div class="form-group clearfix">
                    <label>@Localize.T("Created Min Date")</label>
                    <input class="form-control convert_cus_inp" placeholder="Created Min Date" id="appointment_createmindate" />
                </div>
                <div class="form-group clearfix">
                    <label>@Localize.T("Created Max Date")</label>
                    <input class="form-control convert_cus_inp" placeholder="Created Max Date" id="appointment_createmaxdate" />
                </div>
            </div>
            <div class="convert_cus_report_footer convert_cus_div">
                <button class="btn green_button" id="apply_btn_filter" onclick="TicketListLoad(1)">@Localize.T("Apply")</button>
                <button class="btn red_button" id="reset_btn_filter" onclick="ResetFilter()">@Localize.T("Reset")</button>
            </div>
        </div>
    </div>

    <div class="app_date_table">
        
    </div>
</div>


