@{
    Layout = null;
}
@model HS.Entities.PayrollMonthlyProductionBonus
@using AppConfig = HS.Framework.Utils.AppConfig;
@using Localize = HS.Web.UI.Helper.LanguageHelper
<link href="~/Content/Css/Payroll/AddPayrollSetting.css" rel="stylesheet" />
<script src="~/Content/Js/Funding/AddPayrollSetting.js"></script>
<div class="add_sales_matrix_header">
    <div>@Localize.T("Monthly Production Bonus")</div>
</div>
<div class="add_sales_matrix_container">
    @Html.HiddenFor(x => x.Id)

    <div class="clearfix">
        <div class="add_sales_matrix_row">
            <label>@Localize.T("Min")</label>
            <div class="add_sales_matrix_margin">
                    @Html.TextBoxFor(x => x.MonthlyProductionBonusMin, new { @class = "form-control", datarequired = "true", placeholder = "Min" })
                    <label rel="Name" class="label hidden red position-absolute">*@Localize.T("Min required")</label>
            </div>
        </div>
        <div class="add_sales_matrix_row">
            <label>@Localize.T("Max")</label>
            <div class="add_sales_matrix_margin">
                    @Html.TextBoxFor(x => x.MonthlyProductionBonusMax, new { @class = "form-control", datarequired = "true", placeholder = "Max" })
                    <label rel="Name" class="label hidden red position-absolute">*@Localize.T("Max required")</label>
            </div>
        </div>
        <div class="add_sales_matrix_row">
            <label>@Localize.T("Point")</label>
            <div class="add_sales_matrix_margin">
                    @Html.TextBoxFor(x => x.Point, new { @class = "form-control", datarequired = "true", placeholder = "Point" })
                    <label rel="Name" class="label hidden red position-absolute">*@Localize.T("Point required")</label>
            </div>
        </div>
    </div>
</div>


<section class="footer-section">
    <footer class="footer">
        <div class="SaveCancelDiv">
            <button class="btn green_button" id="SaveMonthlyProductionBonus"><i class="fa fa-floppy-o" aria-hidden="true"></i>@Localize.T(" Save")</button>
        </div>
    </footer>
</section>

