@{ 
    Layout = null;
}
<link href="~/Content/datatable/ERPDatatable.css" rel="stylesheet" />
<link href="~/Content/Css/Report/GetLeadsServiceAndEquipmentCustomer.css" rel="stylesheet" />
<script>
    var TabsLoaderText = "<div class='invoice-loader'><div><div class='lds-css ng-scope'><div style='margin:auto; z-index:99;' class='lds-double-ring'><div></div><div></div></div></div></div></div>";
    $(document).ready(function () {
        $(".load_invoice_list").load("/Invoice/InvoiceListPartial?CustomerId=@ViewBag.customerid&PageNo=1&PageSize=1000&InvoiceType=All")
    })
</script>

<div style="overflow-y:auto;height:100vh;">
    <div class="customer_report_details_container">
        <div class="customer_report_details_header">
            <span>Invoice</span>
        </div>
        <div class="load_invoice_list"></div>
    </div>
    @{
        if ((List<HS.Entities.CustomerPackageService>)ViewBag.packageservice != null && ((List<HS.Entities.CustomerPackageService>)ViewBag.packageservice).Count > 0)
        {
            <div class="customer_report_details_container">
                <div class="customer_report_details_header">
                    <span>Service</span>
                </div>
                <table class="uk-table uk-table-hover uk-table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Monthly Rate</th>
                            <th>Discounted Rate</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in (List<HS.Entities.CustomerPackageService>)ViewBag.packageservice)
                        {
                            <tr>
                                <td>@item.EquipmentServiceName</td>
                                <td>
                                    @{
                                        if (item.MonthlyRate > 0)
                                        {
                                            <span>$@string.Format("{0:#,###.00}", item.MonthlyRate)</span>
                                        }
                                        else
                                        {
                                            <span>$0.00</span>
                                        }
                                    }
                                </td>
                                <td>
                                    @{
                                        if (item.DiscountRate > 0)
                                        {
                                            <span>$@string.Format("{0:#,###.00}", item.DiscountRate)</span>
                                        }
                                        else
                                        {
                                            <span>$0.00</span>
                                        }
                                    }
                                </td>
                                <td>
                                    @{
                                        if (item.Total > 0)
                                        {
                                            <span>$@string.Format("{0:#,###.00}", item.Total)</span>
                                        }
                                        else
                                        {
                                            <span>$0.00</span>
                                        }
                                    }
                                </td>
                            </tr>
                                        }
                    </tbody>
                </table>
            </div>
                                        }
    }
    @{
        if ((List<HS.Entities.CustomerPackageService>)ViewBag.packageservice != null && ((List<HS.Entities.CustomerPackageService>)ViewBag.packageservice).Count > 0)
        {
            <div class="customer_report_details_container">
                <div class="customer_report_details_header">
                    <span>Equipment</span>
                </div>
                <table class="uk-table uk-table-hover uk-table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Unit Price</th>
                            <th>Total Discount</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in (List<HS.Entities.CustomerPackageEqp>)ViewBag.packageeqp)
                        {
                            <tr>
                                <td>@item.EquipmentServiceName</td>
                                <td>
                                    @{
                                        if (item.UnitPrice > 0)
                                        {
                                            <span>$@string.Format("{0:#,###.00}", item.UnitPrice)</span>
                                        }
                                        else
                                        {
                                            <span>$0.00</span>
                                        }
                                    }
                                </td>
                                <td>
                                    @{
                                        if (item.DiscountPckage > 0)
                                        {
                                            <span>$@string.Format("{0:#,###.00}", item.DiscountPckage)</span>
                                        }
                                        else
                                        {
                                            <span>$0.00</span>
                                        }
                                    }
                                </td>
                                <td>
                                    @{
                                        if (item.Total > 0)
                                        {
                                            <span>$@string.Format("{0:#,###.00}", item.Total)</span>
                                        }
                                        else
                                        {
                                            <span>$0.00</span>
                                        }
                                    }
                                </td>
                            </tr>
                                        }
                    </tbody>
                </table>
            </div>
                                        }
    }
</div>



