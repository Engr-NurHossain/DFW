    <script>
        function FormatCellNumber(cvalue) {
            var ValueCleanCell = "";
            if (cvalue != undefined && cvalue != "" && cvalue != null) {
                cvalue = cvalue.replace(/[-  ]/g, '');
                if (cvalue.length >= 10 && cvalue.length <= 14) {
                    ValueCleanCell = cvalue.replace(/(\d{3})\-?(\d{3})\-?(\d{4})/, "$1-$2-$3");
                    $("#RequestPhone").removeClass("required");
                }
                else {
                    $("#RequestPhone").addClass("required");
                    ValueCleanCell = cvalue;
                }
            }
            return ValueCleanCell;
        }
        var RequestAdmin = function () {
            var url = "/Home/RequestAdmin";
            var param = {
                Name: $("#RequestName").val(),
                Company: $("#RequestCompany").val(),
                Phone: $("#RequestPhone").val(),
                Email: $("#RequestEmail").val()
            };
            $.ajax({
                url: url,
                data: param,
                type: "Post",
                dataType: "Json",
                success: function (data) {
                    if (data == true) {
                        $("#RequestName").val("");
                        $("#RequestCompany").val("");
                        $("#RequestPhone").val("");
                        $("#RequestEmail").val("");
                        bootbox.alert("Successfully sent an email to RMR admin");
                    } else {
                        bootbox.alert("Something is wrong. Please try again later");
                    }
                }
            });
        }
        var pattern = /^\b[A-Z0-9._%-]+@@[A-Z0-9.-]+\.[A-Z]{2,4}\b$/i
        var IsVaildEmail = function (value) {
            if (pattern.test(value)) {
                $("#RequestEmail").css({ "border": "1px solid #babec5" });
            }
            else {
                $("#RequestEmail").css({ "border": "1px solid red" });
            }
        }
        $(document).ready(function () {
            $("#RequestPhone").keyup(function () {
                var PhoneNumber = $(this).val();
                if (PhoneNumber != undefined && PhoneNumber != null && PhoneNumber != "") {
                    var cleanPhoneNumber = FormatCellNumber(PhoneNumber);
                    $(this).val(cleanPhoneNumber);
                }
            })
            $("#RequestEmail").keyup(function () {
                IsVaildEmail($(this).val())
            })
            $("#RequestSubmit").click(function () {
                if ($("#RequestName").val() != "" && $("#RequestCompany").val() != "" && $("#RequestPhone").val() != "" && $("#RequestEmail").val() != "") {
                    RequestAdmin();
                }
                else {
                    bootbox.alert("All fields are required");
                }
            })
        })
    </script>
</head>
