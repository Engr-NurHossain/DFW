@model HS.Entities.CreateEstimator
@using System.Collections;


@helper GetLineItems(List<HS.Entities.EstimatorDetail> estimatorDetails, string Currency, HS.Entities.EstimatorPDFFilter filters)
{
    double TotalCatagoryCost = 0;
    foreach (HS.Entities.EstimatorDetail item in estimatorDetails)
    {
        TotalCatagoryCost += item.TotalPrice.HasValue ? item.TotalPrice.Value : 0.0;

        <tr style="border-bottom:1px solid #ccc;">
            <!--Product Name-->
            <td style="padding:5px 0px 5px 40px;">
                @if (filters.IncludeImage.HasValue && filters.IncludeImage.Value && item.EquipmentFile != null && !string.IsNullOrWhiteSpace(item.EquipmentFile.Filename))
                {
                    <img src="@item.EquipmentFile.Filename" alt="Alternate Text" style="width:25px;height:25px" />
                }
                @if (!string.IsNullOrWhiteSpace(item.PartDescription))
                {
                    <span>@item.PartDescription</span><br />
                }
                @if (filters.IncludeManufacturer.HasValue && filters.IncludeManufacturer.Value)
                {
                    <span>@item.Manufacturer</span>
                }
            </td>
            <!--Product SKU-->
            @*<td style="padding:5px 0px 5px 40px;">
                    @if (!string.IsNullOrWhiteSpace(item.SKU))
                    {
                        <span>@item.SKU</span><br />
                    }
                    @if (filters.IncludeVariation.Value)
                    {
                        <span>@item.Variation</span>
                    }
                </td>*@
            <!--Product QTY-->
            <td style="padding:5px 0px 5px 40px;">
                @if (item.Qunatity != null)
                {
                    <span>@item.Qunatity</span><br />
                }
            </td>
            <!--Product COST-->
            @if (filters.IncludeCost.HasValue && filters.IncludeCost.Value)
            {
                <td style="padding:5px 0px 5px 40px;">
                    @if (item.UnitCost != null)
                    {
                        <span>@Currency@HS.Web.UI.Helper.LabelHelper.FormatAmount(item.UnitCost)</span><br />
                    }
                </td>
                <td style="padding:5px 0px 5px 40px;">
                    @if (item.TotalCost != null)
                    {
                        <span>@Currency@HS.Web.UI.Helper.LabelHelper.FormatAmount(item.TotalCost)</span><br />
                    }
                </td>
            }
            <!--Product PROFIT/MARGIN-->
            @if ((filters.IncludeProfit.HasValue && filters.IncludeProfit.Value) || (filters.IncludeMargin.HasValue && filters.IncludeMargin.Value))
            {
                <td style="padding:5px 0px 5px 40px;">
                    @if (item.Profit != null)
                    {
                        <span>@Currency@HS.Web.UI.Helper.LabelHelper.FormatAmount(item.Profit)</span><br />
                    }
                </td>
            }
            <!--Product Overhead-->
            @if (filters.IncludeOverhead.HasValue && filters.IncludeOverhead.Value)
            {
                <td>
                    @if (item.Overhead != null)
                    {
                        <span>@Currency@HS.Web.UI.Helper.LabelHelper.FormatAmount(item.Overhead)</span><br />
                    }
                </td>
            }
            <!--Product PRICE-->
            @if ((filters.WithoutPricing.HasValue && filters.WithoutPricing.Value)
    || (filters.WithoutIndividualMaterialPricing.HasValue && filters.WithoutIndividualMaterialPricing.Value && item.CategoryVal != "Labor")
    || (filters.WithoutIndividualLaborPricing.HasValue && filters.WithoutIndividualLaborPricing.Value && item.CategoryVal == "Labor"))
            {

            }
            else
            {
                <td>
                    @if (item.TotalPrice != null)
                    {
                        <span>@Currency@HS.Web.UI.Helper.LabelHelper.FormatAmount(item.TotalPrice / item.Qunatity)</span><br />
                    }
                </td>
                <td style="text-align:right;">
                    @if (item.TotalPrice != null)
                    {
                        <span>@Currency@HS.Web.UI.Helper.LabelHelper.FormatAmount(item.TotalPrice)</span><br />
                    }
                </td>
            }
        </tr>
    }

    @*if ((filters.WithoutPricing.HasValue && !filters.WithoutPricing.Value) && (filters.GroupedbyNone.HasValue && !filters.GroupedbyNone.Value))
    {
        <tr>
            <td style="padding:5px 10px 5px 40px; text-align:right;" colspan="10">
                <b><span>Sub Total: @Currency@HS.Web.UI.Helper.LabelHelper.FormatAmount(TotalCatagoryCost)</span></b>
            </td>
        </tr>
        TotalCatagoryCost = 0;
    }*@
}

