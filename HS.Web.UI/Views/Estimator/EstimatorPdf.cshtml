                                <tr style="background-color:#4c4c4c; color:white;width:100%; border:1px solid #4c4c4c;">
                                    <th style="width:40%;text-align:left;padding:5px 0px 5px 40px; border-right:1px solid #fff;">
                                        Service
                                    </th>
                                    <th style="width:5%; padding:5px 0px; border-right:1px solid #fff;">QTY</th>
                                    <th style="width:10%; padding:5px 0px; border-right:1px solid #fff;">UNIT PRICE</th>
                                    <th style="width:10%; padding:5px 0px;">TOTAL PRICE</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.estimatorServices != null)
                                {
                                    foreach (var item in Model.estimatorServices)
                                    {
                                        <tr style="border-bottom:1px solid #ccc;">
                                            <!--Service Name-->
                                            <td style="padding:5px 0px 5px 40px;">
                                                @if (!string.IsNullOrWhiteSpace(item.EquipmentName))
                                                {
                                                    <span>@item.EquipmentName</span><br />}
                                            </td>
                                            <!--Service QTY-->
                                            <td style="padding:5px 0px 5px 40px;">
                                                @if (item.Quantity > 0)
                                                {
                                                    <span>@item.Quantity</span><br />}
                                            </td>
                                            <!--Unit Price-->
                                            <td style="padding:5px 0px 5px 40px;">
                                                @if (item.UnitPrice != 0)
                                                {
                                                    <span>@Currency@HS.Web.UI.Helper.LabelHelper.FormatAmount(item.UnitPrice)</span><br />}
                                            </td>
                                            <!--Service Amount-->
                                            <td style="text-align:right;">
                                                @if (item.Amount != 0)
                                                {
                                                    <span>@Currency@HS.Web.UI.Helper.LabelHelper.FormatAmount(item.Amount)</span><br />}
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    <!--Border-->
                    <div style="width:100%;height:50px;border-bottom:1px solid #4c4c4c;position:relative;"></div>
                    <div style="width:50%; float:left; padding-top:10px;">
                        &nbsp;
                    </div>
                    <div style="width:50%; float:left; padding-top:10px;">
                        <div style="width:100%">
                            <div style="width:70%;float:left;text-align:right">
                                <span>Sub Total</span>
                            </div>
                            <div style="width:30%;float:left;text-align:right;">
                                <h3 style="margin:0px;padding-right:10px;">@Currency@HS.Web.UI.Helper.LabelHelper.FormatAmount(Model.Estimator.ServiceTotalAmount)</h3>
                            </div>
                        </div>


                        @if (Model.Estimator.ShowServicePlan.HasValue && Model.Estimator.ShowServicePlan.Value)
                        {
                            <div style="width:100%">
                                <div style="width:70%;float:left;text-align:right">
                                    <span>@Model.Estimator.ServicePlanTypeName</span>
                                </div>
                                <div style="width:30%;float:left;text-align:right;">
                                    <h3 style="margin:0px;padding-right:10px;">@Currency@HS.Web.UI.Helper.LabelHelper.FormatAmount(Model.Estimator.ServicePlanAmount)</h3>
                                </div>
                            </div>
                            <div style="width:100%">
                                <div style="width:70%;float:left;text-align:right">
                                    <span>Sub Total</span>
                                </div>
                                <div style="width:30%;float:left;text-align:right;">
                                    <h3 style="margin:0px;padding-right:10px;">@Currency@HS.Web.UI.Helper.LabelHelper.FormatAmount(Model.Estimator.ServiceTotalAmount + Model.Estimator.ServicePlanAmount)</h3>
                                </div>
                            </div>}
                        <div style="width:100%">
                            <div style="width:70%;float:left;text-align:right">
                                <span>Total Tax</span>
                            </div>
                            <div style="width:30%;float:left;text-align:right;">
                                <h3 style="margin:0px;padding-right:10px;">@Currency@HS.Web.UI.Helper.LabelHelper.FormatAmount(Model.Estimator.ServiceTaxAmount)</h3>
                            </div>
                        </div>
                        <div style="width:100%">
                            <div style="width:70%;float:left;text-align:right">
                                <span>Total Amount</span>
                            </div>
                            <div style="width:30%;float:left;text-align:right;">
                                <h3 style="margin:0px;padding-right:10px;">@Currency@HS.Web.UI.Helper.LabelHelper.FormatAmount(Math.Round(Model.Estimator.ServiceTotalAmount.Value, 2) + Math.Round(Model.Estimator.ServiceTaxAmount.Value, 2) + Math.Round(Model.Estimator.ServicePlanAmount.Value, 2))</h3>
                            </div>
                        </div>
                        
                    </div>
                    @*<div style="width: 100%; box-sizing: border-box; text-align: left; padding-left: 40px;">
                        @if (!string.IsNullOrWhiteSpace(Model.Estimator.PaymentTerm))
                        {
                            <span style="float:left; width:auto; margin-top:-50px;">

                                Payment Terms: @Model.Estimator.PaymentTerm
                            </span>
                        }
                    </div>*@
                </div>
            </div>
        }
    }
</body>
</html>



