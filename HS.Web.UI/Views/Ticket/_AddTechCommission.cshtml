@{
    Layout = null;
}
@model HS.Entities.TechCommission
@using Localize = HS.Web.UI.Helper.LanguageHelper
<script src="~/Content/Js/Site/Validation.js"></script>
<script src="~/Content/Js/Payroll/AddCommission.js"></script>
<link href="~/Content/Css/Ticket/TicketAddCommissionStyle.css" rel="stylesheet" />

<div class="commission_container">
    @Html.HiddenFor(m => m.CustomerId)
    @Html.HiddenFor(m => m.TicketId)

    <div class="commission_header">@Localize.T("Add Tech Commission")</div>
    <div class="commission_inner_height">
        <div class="commission_inner">
            <div class="form-group clearfix">
                <span class="span_style">@Localize.T("Technician")</span>
                @Html.DropDownListFor(x => x.UserId, ViewBag.TechnicianList as List<SelectListItem>, new { @class = "form-control", datarequired = "true" })
                <label rel="UserId" class="label hidden red position-absolute">*@Localize.T("Select a technician")</label>
            </div>
            <div class="form-group clearfix">
                <span class="span_style">@Localize.T("Base RMR Commission")</span>
                @Html.TextBoxFor(x => x.BaseRMRCommission, new { @class = "form-control", Placeholder = "Base RMR Commission" })
            </div>
            @*<div class="form-group clearfix">
                <span class="span_style">@Localize.T("Added RMR Commission")</span>
                @Html.TextBoxFor(x => x.AddedRMRCommission, new { @class = "form-control", Placeholder = "Added RMR Commission" })
            </div>*@
            <div class="form-group">
                <span class="span_style">@Localize.T("Point Adjustment")</span>
                @Html.TextBoxFor(x => x.OriginalPoint, new { @class = "form-control", Placeholder = "Point Adjustment" })
            </div>
        </div>
    </div>
    <div class="commission_footer">
        <button class="btn" onclick="SaveTechCommission()">@Localize.T("Save")</button>
    </div>
</div>

