@{ 
    Layout = null;
    var CurrentUser = (HS.Web.UI.Helper.CustomPrincipal)User;
}
@model HS.Entities.CreateTicketModel
@using PermissionChekcer = HS.Web.UI.Helper.PermissionHelper
@using Permissions = HS.Framework.UserPermissions
<script>
    $(document).ready(function () {
        $('.selectpicker').selectpicker();
    })
</script>
@if (!PermissionChekcer.IsPermitted(Permissions.CustomerTicketPermission.TicketAdditionalPermission))
{
    if (ViewBag.EmployeeList != null)
    {
        @Html.DropDownList("AdditionalMembers", ViewBag.EmployeeList as List<SelectListItem>, new { @class = "form-control selectpicker", @multiple = "multiple", @disabled = "disabled" })

    }
}
else
{
    if (ViewBag.EmployeeList != null)
    {
        @Html.DropDownList("AdditionalMembers", ViewBag.EmployeeList as List<SelectListItem>, new { @class = "form-control selectpicker", @multiple = "multiple" })

    }
}

