@{
    Layout = null;
}
@model HS.Entities.SalesCommission
@using Localize = HS.Web.UI.Helper.LanguageHelper
<script src="~/Content/Js/Payroll/AddCommission.js"></script>
<script src="~/Content/Js/Site/Validation.js"></script>
<link href="~/Content/Css/Ticket/TicketAddCommissionStyle.css" rel="stylesheet" />
<div class="commission_container">
    @Html.HiddenFor(m=>m.CustomerId)
    @Html.HiddenFor(m => m.TicketId)

    <div class="commission_header">@Localize.T("Add Sales Commission")</div>
    <div class="commission_inner_height"">
        <div class="commission_inner">
            <div class="form-group">
                <span class="span_style">@Localize.T("Sales Person")</span>
                @Html.DropDownListFor(x => x.UserId, ViewBag.SalesPersonList as List<SelectListItem>, new { @class = "form-control", datarequired = "true" })
                <label rel="UserId" class="label hidden red position-absolute">*@Localize.T("Select a sales person")</label>
            </div>
            <div class="form-group">
                <span class="span_style">@Localize.T("RMR Commission")</span>
                @Html.TextBoxFor(x => x.RMRCommission, new { @class = "form-control", Placeholder = "RMR Commission" })
            </div>
            <div class="form-group">
                <span class="span_style">@Localize.T("Equipment Commission")</span>
                @Html.TextBoxFor(x => x.Adjustment, new { @class = "form-control", Placeholder = "Equipment Commission" })
            </div>
            <div class="form-group">
                <span class="span_style">@Localize.T("Point Adjustment")</span>
                @Html.TextBoxFor(x => x.OriginalPoint, new { @class = "form-control", Placeholder = "Point Adjustment" })
            </div>
        </div>
    </div>
    <div class="commission_footer">
        <button class="btn" onclick="SaveSalesCommission()">@Localize.T("Save")</button>
    </div>
</div>
