@{
    Layout = "~/Views/Shared/_PrivateLayout.cshtml";
}
<script>
    $(document).ready(function () {
        $(".LoaderWorkingDiv").hide();
    })
</script>
@{
    string url = Request.Url.AbsolutePath;

    if (url.ToLower().IndexOf("/recruitment/w9form") > -1)
    {
        ViewBag.Title = "W9 Form";
        Html.RenderAction("W9Form", "Recruit", new { IsPdf = ViewBag.IsPdf });
    }
    else if(url.ToLower().IndexOf("/recruitment/w4form") > -1)
    {
        ViewBag.Title = "W4 Form";
        Html.RenderAction("W4Form", "Recruit", new { IsPdf = ViewBag.IsPdf });
    }
    else if (url.ToLower().IndexOf("/recruitment/i9form") > -1)
    {
        ViewBag.Title = "I9 Form";
        Html.RenderAction("I9Form", "Recruit", new { IsPdf = ViewBag.IsPdf });
    }
    else if (url.ToLower().IndexOf("/recruitment/statelictx") > -1)
    {
        ViewBag.Title = "TX State License";
        Html.RenderAction("UploadDocuments", "Recruit", new { IsStateLicTx=true, IsPdf = ViewBag.IsPdf });
    }
    else if (url.ToLower().IndexOf("/recruitment/drivinglicnese") > -1)
    {
        ViewBag.Title = "Driving License";
        Html.RenderAction("UploadDocuments", "Recruit", new { IsPdf = ViewBag.IsPdf, IsDrivingLicnese = true});
    }
    else if (url.ToLower().IndexOf("/recruitment") > -1)
    {
        ViewBag.Title = "Recruitment";
        Html.RenderAction("RecruitTab", "Recruit");
    }
}

