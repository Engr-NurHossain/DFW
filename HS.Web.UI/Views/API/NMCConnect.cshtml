@using PermissionChekcer = HS.Web.UI.Helper.PermissionHelper
@using Permissions = HS.Framework.UserPermissions

@{
    Layout = null;
}
@using Localize = HS.Web.UI.Helper.LanguageHelper
<script>
    var NMCRefId = '@ViewBag.NmcRefId';
    $(".CreateCustomerNMC").click(function () {
        OpenTopToBottomModal(String.format("/API/AddNMCCustomer?CustomerId={0}", CustomerLoadGuid))
    });
   
</script>
<link href="~/Content/Css/AlarmDotCom/alarm.css" rel="stylesheet" />
<script src="~/Content/Js/NMCConnect/NMC.js"></script>
<div class="width-100p create_alarm">
    @if (string.IsNullOrEmpty(ViewBag.NmcRefId))
    {
        <div class="customersyncarea">
            <label>CS Number</label>
            <div class="input-group add-on">
                <input type="text" id="NMCSyncId" title="CS Number" />

                <div class="input-group-btn"> <button class="btn btn-default syncbtnNMC green_button">@Localize.T("Sync")</button></div>

            </div>
        </div>
        <div class="CreateCustomerDiv width-100p">
            <button class="btn CreateCustomerNMC"><i class="fa fa-user-plus"></i> @Localize.T("Create Customer")</button>
        </div>

    }
    else
    {
        //<button class="btn CreateCustomerUCC"><i class="fa fa-user-plus"></i> @Localize.T("Create Customer")</button>
        <div id="NMCCustomerDetailsLoad">

        </div>
    }
</div>
