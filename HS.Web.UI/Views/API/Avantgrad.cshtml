@using PermissionChekcer = HS.Web.UI.Helper.PermissionHelper
@using Permissions = HS.Framework.UserPermissions

@{
    Layout = null;
}
@using Localize = HS.Web.UI.Helper.LanguageHelper
<script>
    var AvantgradRefId = '@ViewBag.AvantgradRefId';
    $(".CreateCustomerAvantgrad").click(function () {
        OpenTopToBottomModal(String.format("/API/AvantgradCustomer?CustomerId={0}", CustomerLoadGuid))
    });

</script>
<link href="~/Content/Css/AlarmDotCom/alarm.css" rel="stylesheet" />
<script src="~/Content/Js/Avantgrad/Avantgrad.js"></script>
<div class="width-100p create_alarm">
    @if (string.IsNullOrEmpty(ViewBag.AvantgradRefId))
    {
        <div class="customersyncarea">
            <label>Transmitter Code</label>
            <div class="input-group add-on">
                <input type="text" id="AvantgradSyncId" title="Transmitter Code" />

                <div class="input-group-btn"> <button class="btn btn-default syncbtnAvantgrad green_button">@Localize.T("Sync")</button></div>

            </div>
        </div>
        <div class="CreateCustomerDiv width-100p">
            <button class="btn CreateCustomerAvantgrad"><i class="fa fa-user-plus"></i> @Localize.T("Create Customer")</button>
        </div>

    }
    else
    {
        //<button class="btn CreateCustomerUCC"><i class="fa fa-user-plus"></i> @Localize.T("Create Customer")</button>
        <div id="AvantgradCustomerDetailsLoad">

        </div>
    }
</div>

