                window.open('/API/GetAccountSignalHistory?CSNumber=' + NmcRefId + '&StartDate=' + StartDate + '&EndDate=' + EndDate, '_blank');
            }
            else {
                OpenErrorMessageNew("","Start Date and End Date required.");
            }
             
        })
    })
</script>
