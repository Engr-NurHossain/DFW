            if (data.result == true) {
                OpenSuccessMessageNew("", data.message, function () {
                         $(".NMCConnectTab").click();
                })
            }
            else {
                OpenErrorMessageNew("", data.message, function () {

                })

            }
        },
        error: function (jqXHR, textStatus, errorThrown) {
            console.log(errorThrown);
        }
    });
}
  var PlaceAccountOnTestConfirm = function () {
