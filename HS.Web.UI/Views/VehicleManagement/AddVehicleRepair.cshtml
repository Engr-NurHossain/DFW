@{
    Layout = null;
}
@model HS.Entities.VehicleRepairLog


@using Localize = HS.Web.UI.Helper.LanguageHelper
@Styles.Render("~/styles/AddFile")

<script src="~/Content/Js/VehicleManagement/VehicleRepair.js"></script>

<script>
    var RepairId = '@Model.Id';

    $(function () {
        var CompletionDatepicker = new Pikaday({
            field: $('#RepairDate')[0],
            format: 'MM/DD/YYYY'
        });
        var CompletionDatepicker = new Pikaday({
            field: $('#TireRotation')[0],
            format: 'MM/DD/YYYY'
        });
        var CompletionDatepicker = new Pikaday({
            field: $('#Registration')[0],
            format: 'MM/DD/YYYY'
        });
        var CompletionDatepicker = new Pikaday({
            field: $('#OildChange')[0],
            format: 'MM/DD/YYYY'
        });
        $("#CreatedDate").datepicker();
    });
</script>


<div class="add_file_header">@Localize.T("Add Repair Log")</div>
<div class="container_addfile add_vehicle_repair_container">
   
    <span class="content-type">@Localize.T("Date")</span>
    <div class="txt_form_add_file">
        <input type="text" id = "RepairDate" name="Date" value="@Model.Date.ToString("MM/dd/yy")" datarequired = "true" class="form-control"/>
        <label rel="RepairDate" class="label hidden red position-absolute">*@Localize.T("Date Required")</label>
    </div>
  
    <span class="content-type">@Localize.T("Amount")</span>
    <div class="txt_form_add_file">
        <input type="number" class="form-control" id="Amount" value="@Model.Amount" name="Amount" placeholder="@Localize.T("Quick Book No")" datarequired="true" />
        <label rel="Amount" class="label hidden red position-absolute">*@Localize.T("Amount Required")</label>
    </div>

    <span class="content-type">@Localize.T("Driver")</span>
    <div class="txt_form_add_file">
        <input type="text" class="form-control" id="Driver" value="@Model.Driver" name="Driver" placeholder="@Localize.T("Driver")" datarequired="true" />
        <label rel="Driver" class="label hidden red position-absolute">*@Localize.T("Driver Required")</label>
    </div>
    <span class="content-type">@Localize.T("Mileage")</span>
    <div class="txt_form_add_file">
        <input type="number" class="form-control" id="Mileage" value="@Model.Mileage" name="Mileage" placeholder="@Localize.T("Mileage")" datarequired="true" />
        <label rel="Mileage" class="label hidden red position-absolute">*@Localize.T("Mileage Required")</label>
    </div>

    <span class="content-type">@Localize.T("Spent")</span>
    <div class="txt_form_add_file">
        <input type="number" class="form-control" id="Spent" value="@Model.Spent" name="Spent" placeholder="@Localize.T("Spent")" datarequired="true" />
        <label rel="Spent" class="label hidden red position-absolute">*@Localize.T("Spent Required")</label>
    </div>

    <span class="content-type">@Localize.T("Tire Rotation")</span>
    <div class="txt_form_add_file">
        <input type="text" class="form-control" id="TireRotation" name="TireRotation" datarequired="true" />
        <label rel="TireRotation" class="label hidden red position-absolute">*@Localize.T("Tire Rotation Date Required")</label>
    </div>

    <span class="content-type">@Localize.T("Registration")</span>
    <div class="txt_form_add_file">
        <input type="text" class="form-control" id="Registration"  name="Registration" placeholder="@Localize.T("Registration")" datarequired="true" />
        <label rel="Registration" class="label hidden red position-absolute">*@Localize.T("Registration Date Required")</label>
    </div>
    
    <span class="content-type">@Localize.T("OildChange")</span>
    <div class="txt_form_add_file">
        <input type="text" class="form-control" id="OildChange"  name="OildChange" placeholder="@Localize.T("Oild Change Date")" datarequired="true" />
        <label rel="OildChange" class="label hidden red position-absolute">*@Localize.T("Oild Change Date Required")</label>
    </div>
    <span class="content-type">@Localize.T("TireDepth")</span>
    <div class="txt_form_add_file">
        <input type="text" class="form-control" id="TireDepth" value="@Model.TireDepth" name="TireDepth" placeholder="@Localize.T("TireDepth")" datarequired="true" />
        <label rel="TireDepth" class="label hidden red position-absolute">*@Localize.T("TireDepth Required")</label>
    </div>

    <div class="add_veihice_repair_check">
        <label class="label-cbx">
            <input id="InteriorClean" type="checkbox" class="invisible shipping-checkbox-es" value="@Model.InteriorClean">
            <div class="checkbox">
                <svg width="20px" height="20px" viewBox="0 0 20 20">
                    <path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
                    <polyline points="4 11 8 15 16 6"></polyline>
                </svg>
            </div>
        </label>
        <div class="content-type">@Localize.T("Interior Clean")</div>
    </div>
    
    <div class="add_veihice_repair_check">
        <label class="label-cbx">
            <input  type="checkbox" class="invisible shipping-checkbox-es" id="ExteriorClean" value="@Model.ExteriorClean">
            <div class="checkbox">
                <svg width="20px" height="20px" viewBox="0 0 20 20">
                    <path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
                    <polyline points="4 11 8 15 16 6"></polyline>
                </svg>
            </div>
        </label>
        <div class="content-type">@Localize.T("Exterior Clean")</div>
    </div>
    <div class="add_veihice_repair_check">
        <label class="label-cbx">
            <input id="Vaccumed" value="@Model.Vaccumed" type="checkbox" class="invisible shipping-checkbox-es" >
            <div class="checkbox">
                <svg width="20px" height="20px" viewBox="0 0 20 20">
                    <path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
                    <polyline points="4 11 8 15 16 6"></polyline>
                </svg>
            </div>
        </label>
        <div class="content-type">@Localize.T("Vaccumed")</div>
    </div>
    <div class="add_veihice_repair_check">
        <label class="label-cbx">
            <input type="checkbox" class="invisible shipping-checkbox-es" id="EquipmentOrganized" value="@Model.EquipmentOrganized">
            <div class="checkbox">
                <svg width="20px" height="20px" viewBox="0 0 20 20">
                    <path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
                    <polyline points="4 11 8 15 16 6"></polyline>
                </svg>
            </div>
        </label>
        <div class="content-type">@Localize.T("Equipment Organized")</div>
    </div>
   
    <span class="content-type">@Localize.T("Note")</span>
    <div class="txt_form_add_file">
        <textarea rows="4" cols="50" id="Note" name="Note" class = "form-control"  ></textarea> 
        
    </div>
  
</div>
<section class="footer-section">
    <footer class="footer">
        <div class="SaveCancelDiv">
            <button class="btn btn_file" id="btnSaveHrVehicleRepair"><i class="fa fa-floppy-o" aria-hidden="true"></i>@Localize.T(" Save")</button>

        </div>
    </footer>
</section>
<div class="">
    <input type="hidden" id="RepairId" value="@Model.Id" />
    <input type="hidden" id="UserId" value="@Model.UserId" />
    <input type="hidden" id="VehicleId" value="@Model.VehicleId" />
</div>