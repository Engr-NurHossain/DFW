
@{
    Layout = "~/Views/Shared/_PrivateLayout.cshtml";
}
<script>
    $(document).ready(function () {
        $(".LoaderWorkingDiv").hide();
    })
</script>

@using AppConfig = HS.Framework.Utils.AppConfig;

@{
    string url = Request.Url.AbsolutePath.ToLower();
    string DomainSitePath = AppConfig.DomainSitePath;
    if (url.IndexOf(DomainSitePath + "/marketing/marketingdetail") > -1)
    {
        ViewBag.Title = "MarketingDetails";
        Html.RenderAction("DetailTab", "Marketing", new { id = ViewBag.Id });
    }
    else if (url.IndexOf(DomainSitePath + "/marketing") == 0)
    {
        ViewBag.Title = "Marketing";
        Html.RenderAction("Marketing", "Marketing");
    }
}
