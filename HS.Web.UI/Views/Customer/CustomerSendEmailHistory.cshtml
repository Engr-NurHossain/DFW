@{
    Layout = null;
}
@using Localize = HS.Web.UI.Helper.LanguageHelper
@model List<HS.Entities.CustomerSnapshot>
<style>
    .History_Mail {
        margin-top: 5px;
        border: 1px solid #ccc;
        margin-right: 5px;
        -webkit-border-radius: 4px;
        -moz-border-radius: 4px;
        border-radius: 4px;
    }
    .header_font_mail{
        background-color: #f9f8f8;
        padding:5px;
    }
</style>
<link href="~/Content/Css/CustomerDetails/CustomerBillingHistories.css" rel="stylesheet" />

<div class="">
    @{
        if (Model.Count > 0)
        {
            <div class="customer_created_histories_row">

                @{foreach (var item in Model)
                {
                        <div class="header_font_mail">
                            @Html.Raw(item.Description) @Localize.T("on") <b>@HS.Framework.DateTimeExtension.UTCToClientTime(item.Logdate).ToString("MM/dd/yy") @HS.Framework.DateTimeExtension.UTCToClientTime(item.Logdate).ToString("hh:mm tt")</b>
                    </div>
                    }
                }
            </div>
                    }
    }
</div>
