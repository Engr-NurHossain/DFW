
@{
    Layout = "~/Views/Shared/_PrivateLayout.cshtml";
}
<script>
    $(document).ready(function () {
        $(".LoaderWorkingDiv").hide();
    })
</script>
 
@using AppConfig = HS.Framework.Utils.AppConfig;
 
@{
    string url = Request.Url.AbsolutePath.ToLower();
    string DomainSitePath = AppConfig.DomainSitePath;
    if (url.IndexOf(DomainSitePath +"/customer/customerdetail") > -1)
    {
        ViewBag.Title = "CustomerDetails";
        Html.RenderAction("DetailTab", "Customer",new {id=ViewBag.Id });
    }
    else if (url.IndexOf(DomainSitePath + "/customer-route") == 0)
    {
        ViewBag.Title = "Customer Route";
        Html.RenderAction("CustomerRoutePartial", "Customer");
    }
    else if (url.IndexOf(DomainSitePath +"/customer-list") == 0)
    {
        ViewBag.Title = "Customer";
        Html.RenderAction("CustomerPartialLite", "Customer");
    }
    else if (url.IndexOf(DomainSitePath +"/customer") == 0)
    {
        ViewBag.Title = "Customer";
        Html.RenderAction("CustomerPartialLite", "Customer");
    }
    else if (url.IndexOf(DomainSitePath +"/serviceproduct") == 0)
    {
        ViewBag.Title = "ServiceProduct";
        Html.RenderAction("ServiceProductPartial", "Customer");
    }
    else if (url.IndexOf(DomainSitePath +"/productcategory") == 0)
    {
        ViewBag.Title = "ProductCategory";
        Html.RenderAction("ProductCategoryPartial", "Customer");
    }
    else if (url.IndexOf(DomainSitePath +"/installcustomersystemno") == 0)
    {
        ViewBag.Title = "Customer System Number";
        Html.RenderAction("CustomerSystemNoPartial", "Customer");
    }
    else if (url.IndexOf(DomainSitePath +"/installcustomersystemprefix") == 0)
    {
        ViewBag.Title = "Customer System Prefix";
        Html.RenderAction("CustomerSystemNoPrefixPartial", "Customer");
    }
    else if (url.IndexOf(DomainSitePath + "/creditgrades") == 0)
    {
        ViewBag.Title = "Customer Credit Score Grade";
        Html.RenderAction("CreditGrades", "Customer");
    }

}
