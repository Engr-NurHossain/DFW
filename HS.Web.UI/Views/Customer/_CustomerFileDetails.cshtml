@{
    ViewBag.Title = "AddCustomerDetails";
    Layout = null;
}
@using Localize = HS.Web.UI.Helper.LanguageHelper
@model List<HS.Entities.CustomerFile>
<link href="~/Content/Css/CustomerDetails/CustomerFileDetails.css" rel="stylesheet" />

@{
    if (Model.Count > 0)
    {
        <div class="ci_block ci_margin_top customer_uploaded_history">
            <div class="ci_header">@Localize.T("Uploaded History")</div>
            <div class="ci_info">
                        @foreach (var item in Model)
                        {
                            <div class="cfd_row">
                                <a target="_blank" href="/Download/?@(HttpUtility.UrlEncode( HS.Framework.DESEncryptionDecryption.EncryptPlainTextToCipherText(item.Id.ToString())))">@item.FileDescription</a>
                            </div>
                        }
                <div class="file_management_div"><a class="goto-file-mng" href="javascript:void(0)" onclick="OpenFilesTab()">@Localize.T("Go to File Management")</a></div>
            </div>
        </div>
    }
}
