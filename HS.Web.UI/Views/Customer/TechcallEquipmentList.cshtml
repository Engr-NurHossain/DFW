@model List<HS.Entities.CusEquipmentList>
@using Localize = HS.Web.UI.Helper.LanguageHelper
@{
    Layout = null;
}

<style>
    .custom-align-center {
        text-align: center;
    }

    .padding-left-5p {
        padding-left: 5px;
    }
</style>

<div class="custom-table">
    <table class="display" id="tblAccHolder">
        <thead class="table-head-border">
            <tr>
                <th class="thead-th-style sorting">
                    @Localize.T("Name")
                </th>
                <th class="thead-th-style sorting custom-align-center">
                    @Localize.T("Quantity")
                </th>
                <th class="thead-th-style sorting custom-align-center">
                    @Localize.T("Unit Price")
                </th>
                <th class="thead-th-style sorting custom-align-center">
                    @Localize.T("Price")
                </th>
                @*<th class="thead-th-style sorting">
                        @Localize.T("Total Price")
                    </th>
                    <th class="thead-th-style sorting text-right">
                        @Localize.T("Your Price")
                    </th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="tr-style">

                    <td class="table-body-td-style" valign="top">
                        <span>
                            @item.EquipmentName
                        </span>
                    </td>
                    <td class="table-body-td-style custom-align-center" valign="top">
                        @item.EquipmentQuantity
                    </td>
                    <td class="table-body-td-style custom-align-center" valign="top">
                        @item.EquipmentUnitPrice.ToString("0.00")
                    </td>
                    <td class="table-body-td-style custom-align-center" valign="top">
                        @if (item.YourPrice < item.EquipmentTotalPrice)
                        {
                            <strike>[@HS.Web.UI.Helper.LabelHelper.FormatAmount(item.EquipmentTotalPrice)]</strike>
                            <span class="padding-left-5p">@item.YourPrice.ToString("0.00")</span>
                        }
                        else
                        {
                            @*@item.EquipmentTotalPrice.ToString("0.00")*@
                            <span>@HS.Web.UI.Helper.LabelHelper.FormatAmount(item.EquipmentTotalPrice)</span>
                        }

                       

                    </td>

                    @*<td class="table-body-td-style" valign="top">
                            @item.EquipmentTotalPrice.ToString("0.00")
                        </td>
                        <td class="table-body-td-style" valign="top">
                            @item.YourPrice.ToString("0.00")
                        </td>*@
                </tr>
            }
        </tbody>
    </table>
</div>