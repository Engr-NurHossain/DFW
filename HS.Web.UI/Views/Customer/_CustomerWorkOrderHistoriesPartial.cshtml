@using Localize = HS.Web.UI.Helper.LanguageHelper
@model List<HS.Entities.CustomerSnapshot>
@using PermissionChekcer = HS.Web.UI.Helper.PermissionHelper
@using Permissions = HS.Framework.UserPermissions
<link href="~/Content/Css/CustomerDetails/CustomerWorkOrderHistoriesPartial.css" rel="stylesheet" />
<style>
    .header_font_work{
        background-color: #f9f8f8;
        padding:5px;
    }
</style>
<div>
    @{
        if (Model.Count > 0)
        {
            if (PermissionChekcer.IsPermitted(Permissions.CustomerPermissions.CustomerDetailsInvoiceHistory))
            {
                <div class="customer_created_histories_row">

                    @{foreach (var item in Model)
                        {
                            <div class="header_font_work">
                                @Html.Raw(item.Description) @Localize.T("created by ") <b>@item.Updatedby</b> @Localize.T("on") <b>@HS.Framework.DateTimeExtension.UTCToClientTime(item.Logdate).ToString("MM/dd/yy") @HS.Framework.DateTimeExtension.UTCToClientTime(item.Logdate).ToString("hh:mm tt")</b>
                            </div>
                        }
                    }
                </div>
            }
        }
    }
</div>


