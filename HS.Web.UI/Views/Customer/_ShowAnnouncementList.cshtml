
@{
    Layout = null;
}
@using Localize = HS.Web.UI.Helper.LanguageHelper
@model IEnumerable<HS.Entities.Announcement>

<style>
    .announcement_list_table {
        width:100%;
        float:left;
        table-layout:fixed;
    }
    .announcement_list_table thead tr th {
        border-bottom:2px solid #ccc;
    }
     .announcement_list_table tbody tr td {
        border-bottom:1px solid #ccc;
    }
    .announcement_list_table thead tr th,
    .announcement_list_table tbody tr td {
        padding:10px;
    }
    .announcement_list_table thead tr th:nth-child(4) {
        width:20%;
    }
    .announcement_list_table tbody tr:nth-child(odd) {
        background-color:#f8f8f8;
    }
     .announcement_list_table tbody tr:hover {
        background-color:#f4f5f8;
    }

</style>
<script>
 
</script>
<table class="announcement_list_table">
    <thead>
        <tr>
            <th>
                @Localize.T("Title")
              
            </th>
            <th>
                @Localize.T("Start Date")
               
            </th>
            <th>
                @Localize.T("End Date")
      
            </th>
           
            <th>
                @Localize.T("Message")

            </th>
            <th>
                @Localize.T("Action")

            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                  
                    <div class="announcement_list_table_device_info"><a class="cus-anchor" onclick="EditAnnounceMent('@item.Id')">@Html.DisplayFor(modelItem => item.Title)</a></div>

                </td>
                <td>
                   
                    <div class="announcement_list_table_device_info">@Html.DisplayFor(modelItem => item.StartTime)</div>

                </td>
                <td>
                 
                    <div class="announcement_list_table_device_info">@Html.DisplayFor(modelItem => item.EndTime)</div>
                </td>
                
                <td>
                    
                    <div class="announcement_list_table_device_info">@Html.DisplayFor(modelItem => item.Message)</div>
                </td>
                <td>
                    <a class="announcement_list_table_device_info" data-toggle="tooltip" onclick="DeleteAnnouncementConfirm('@item.Id')" title="Delete"><i class="fa fa-trash-o"></i></a>
                </td>
               
            </tr>
        }
    </tbody>
</table>
