@model HS.Entities.AccountHolder
@{ 
    Layout = null;
}
@using Localize = HS.Web.UI.Helper.LanguageHelper

<script src="~/Content/Js/Popups/AddAccountHolder.js"></script>
<link href="~/Content/Css/AccountHolder/AddAccountHolder.css" rel="stylesheet" />
<div class="add_account_holder_header">
    @Localize.T("Account Holder Information")
</div>
<div class="container-fluid">
    @*<input type="hidden" id="InHouseValue" value="@Model.InHouse" />*@
    @Html.HiddenFor(x => x.Id)
    <div class="form-group clearfix">
        <span class="content-type">@Localize.T("Name")<span class="red">*</span></span>
        <div class="txt-form">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control content-text", datarequired = "true", id="accName" ,placeholder ="Name"})
            <label rel="Name" class="label hidden red position-absolute">*@Localize.T("Name Required")</label>
        </div>   
    </div>
    <div class="form-group clearfix" style="margin-top:15px;">
        @*<span class="content-type">@Html.CheckBoxFor(x => x.InHouse, new { @checked = "", id = "InHouse" })&nbsp;&nbsp;@Localize.T("InHouse*")</span>*@
        <label for="InHouse" class="label-cbx">
            <input id="InHouse" idval="" type="checkbox" name="InHouse" @(Model.InHouse?"checked":"") value="@Model.InHouse" class="invisible">
            <div class="checkbox">
                <svg width="20px" height="20px" viewBox="0 0 20 20">
                    <path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
                    <polyline points="4 11 8 15 16 6"></polyline>
                </svg>
            </div>@Localize.T("In House")
        </label>
          
        @*<input type="checkbox" id="InHouse" name="InHouse" @(Model.InHouse?"checked":"") value="@Model.InHouse">In House<br>*@
    </div>
</div>

<section class="footer-section">
    <footer class="footer">
        <div class="SaveCancelDiv">
            <button class="btn" id="SaveAccHolder"><i class="fa fa-floppy-o" aria-hidden="true"></i>@Localize.T(" Save")</button>

        </div>
    </footer>
</section>