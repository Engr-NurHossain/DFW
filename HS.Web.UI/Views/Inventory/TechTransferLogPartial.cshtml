            form.attr('action', domainurl + '/Inventory/TechTransferLogListPartialPost/');
            form.attr('method', 'post');
            Object.keys(requestData).forEach(function (key) {
                var input = $('<input type="hidden" name="' + key + '" />');

                input.val(requestData[key]);
                form.append(input);

            });
            form.appendTo('body');
            form.submit();
            form.remove();
        }
