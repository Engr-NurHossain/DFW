        <div class="equipsearchbardiv">
            <div class="input-group add-on"> @*"txt-input" class removed*@
                <input class="form-control" placeholder="Find an Equipment class" name="srch-term" id="srch-term" type="text">
                <div class="input-group-btn">
                    <button class="btn custom-btn green_button" type="submit" title="@Localize.T("Search")"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        </div>

        <div class="custom-table">
            <table class="display" id="tblinfo">
                <thead class="table-head-border">
                    <tr>
                        <th class="thead-th-style sorting">
                            @Localize.T("Name")
                        </th>
                        <th class="thead-th-style sorting text-right">
                            @Localize.T("Actions")
                        </th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr class="tr-style">

                        <td class="table-body-td-style" valign="top">
                            <span>
                                <a href="javascript:void(0)" class="item-edit name-anchor-style" data-id="@item.Id" data-toggle="modal" data-target="#myModal2">

                                    @item.Name
                            </a>
                        </span>
                    </td>
                    <td class="table-body-td" valign="top">

                        @if (PermissionChekcer.IsPermitted(Permissions.ProductsPermissions.ProductClassDelete))
                        {
                            <a href="javascript:void(0)" class="item-delete" data-id="@item.Id" title="@Localize.T("Delete")">
                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                            </a>
                        }
                    </td>
                </tr>
                }

            </table>
