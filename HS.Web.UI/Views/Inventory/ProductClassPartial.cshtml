@model List<HS.Entities.EquipmentClass>
@using PermissionChekcer = HS.Web.UI.Helper.PermissionHelper
@using Permissions = HS.Framework.UserPermissions


@{
    Layout = null;
}

@using Localize = HS.Web.UI.Helper.LanguageHelper
@Styles.Render("~/styles/EquipmentClass")
@Scripts.Render("~/scripts/EquipmentClass")


<div class="Inventory-Page-wrap" id="page-wrap">
    <div class="container-fluid">
        <div id="page-slide" class="page-header slide">
            <div class="row">
                <div class="col-xs-6">
                    <span class="page-title"> @Localize.T("Equipment Class")</span>
                    <div class="back-link"> <a href="javascript:void(0)" id="LoadBack"> @Localize.T("Go Previous Page")</a> </div>
                </div>
                <div class="col-xs-6">
                    @if (PermissionChekcer.IsPermitted(Permissions.ProductsPermissions.ProductClassAdd))
                    {
                        <button class="btn btn-primary" id="AddNewProductClass" type="button" data-toggle="modal" data-target="#myModal2">
                            <i class="fa fa-plus-circle" aria-hidden="true"></i> @Localize.T(" New")
                        </button>
                    }
                </div>
            </div>
            <div class="inventory-popup">
                <div class="modal right fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">

                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

                            </div>

                            <div class="modal-body">
                                <div id="NewProductClass">

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
