@{
    Layout = "~/Views/Shared/_PrivateLayout.cshtml";
}
<script>
    $(document).ready(function () {
        $(".LoaderWorkingDiv").hide();
    })
</script>

@{

    string url = Request.Url.AbsolutePath.ToLower();
    if (url.IndexOf("/inventory/equipmentdetail") >-1)
    {
        ViewBag.Title = "Equipment Detail";
        Html.RenderAction("EquipmentDetailPartial", "Inventory", new { id = ViewBag.Id });
    }
    else if (url.IndexOf("/inventory/servicedetail") > -1)
    {
        ViewBag.Title = "Service Detail";
        Html.RenderAction("EquipmentDetailPartial", "Inventory", new { id = ViewBag.Id });
    }
    else if (url.IndexOf("/productclassinfo") == 0)
    {
        ViewBag.Title = "Product Class Info";
        Html.RenderAction("ProductClassPartial", "Inventory");
    }
    else if (url.IndexOf("/serviceinventory") == 0)
    {
        ViewBag.Title = "Service Inventory Info";
        Html.RenderAction("ServiceListPartial", "Inventory");
    }
    else if (url.IndexOf("/massrestock") == 0)
    {
        ViewBag.Title = "Mass Restock";
        Html.RenderAction("AddMassRestock", "Inventory");
    }
    else if (url.IndexOf("/masspo") == 0)
    {
        ViewBag.Title = "Mass PO";
        Html.RenderAction("AddMassPO", "Inventory");
    }
    else if (url.IndexOf("/techreorderpoint") == 0)
    {
        ViewBag.Title = "Tech Reorder Point";
        Html.RenderAction("AddTechReorderPoint", "Inventory");
    }
}
