                                            </tr>
                                        }
                                    }
                                    if (item.SelectedColumn == "OverheadRate")
                                    {

                                        <tr>
                                            <td>Overhead/Markup<span>:</span></td>
                                            <td>@Model.Equipment.OverheadRate</td>
                                        </tr>

                                    }
                                    if (item.SelectedColumn == "ProfitRate")
                                    {

                                        <tr>
                                            <td>Profit<span>:</span></td>
                                            <td>@Model.Equipment.ProfitRate</td>
