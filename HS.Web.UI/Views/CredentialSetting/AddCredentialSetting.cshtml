@model HS.Entities.CredentialSetting
@{
    Layout = null;
}
@using Localize = HS.Web.UI.Helper.LanguageHelper

<script src="~/Content/Js/Popups/AddCredentialSetting.js"></script>
<link href="~/Content/Css/CredentialSetting/AddCredentialSetting.css" rel="stylesheet" />

<div class="add_cred_set_header">
    @Localize.T("Credential Setting Information")
</div>
<div class="container-fluid">
    
    @Html.HiddenFor(x => x.Id)
  
       
    <div class="form-group clearfix">
        <span class="content-type">@Localize.T("Account Holder Name")<span class="red">*</span></span>
        <div class="txt-form add_cred_set_margin_top_row">
            @Html.DropDownListFor(x=> x.AcountHolderId, (List<SelectListItem>)ViewBag.AccountHolderList, new { @class = "form-control",id= "AccountHolderNameList" })
            <label rel="Name" class="label hidden red position-absolute">*@Localize.T("Name Required")</label>
        </div>
    </div>
   
    <div class="form-group clearfix add_cred_set_margin_top">
        <span class="content-type">@Localize.T("User Name")<span class="red">*</span></span>
        <div class="txt-form add_cred_set_margin_top_row">
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control content-text", datarequired = "true", id = "txtUsername" ,placeholder="User Name"})
            <label rel="Name" class="label hidden red position-absolute">*@Localize.T("Name Required")</label>
        </div>
    </div>
    
    <div class="form-group clearfix add_cred_set_margin_top">
        <span class="content-type">@Localize.T("Password")<span class="red">*</span></span>
        <div class="txt-form add_cred_set_margin_top_row">
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control content-text", datarequired = "true", Type="Password", id = "txtPassword" ,placeholder="Password"})
            <label rel="Name" class="label hidden red position-absolute">*@Localize.T("Password Required")</label>
        </div>
    </div>
    
    <div class="form-group clearfix add_cred_set_margin_top">
        <span class="content-type">@Localize.T("Description")<span class="red">*</span></span>
        <div class="txt-form add_cred_set_margin_top_row">
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control content-text", datarequired = "true", id = "txtDescription" ,placeholder="Description"})
            <label rel="Name" class="label hidden red position-absolute">*@Localize.T("Description Required")</label>
        </div>
    </div>

</div>

<section class="footer-section">
    <footer class="footer">
        <div class="SaveCancelDiv">
            <button class="btn" id="SaveCredetial"><i class="fa fa-floppy-o" aria-hidden="true"></i>@Localize.T(" Save")</button>
        </div>
    </footer>
</section>