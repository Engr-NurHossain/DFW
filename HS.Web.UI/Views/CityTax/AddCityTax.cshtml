@model HS.Entities.CityTax
@{ 
    Layout = null;
}

@using Localize = HS.Web.UI.Helper.LanguageHelper
@Styles.Render("~/styles/AddCityTax")
@Scripts.Render("~/scripts/AddCityTax")
 


<div class="container-fluid">
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        <h3>@Localize.T("Add New CityTax")</h3>
    </div>

    <div class="clearfix">
        &nbsp;
    </div>
    <div class="form-group clearfix">
        <span class="content-type">@Localize.T("City")</span>
        <div class="txt-form">
            @Html.TextBoxFor(x => x.City, new { @class = "content-text", datarequired = "true", id = "City" })
            <br /><label rel="Name" class="label hidden red position-absolute">*@Localize.T("Name Required")</label>
        </div>
        <span class="content-type">@Localize.T("Country")</span>
        <div class="txt-form">
            @Html.TextBoxFor(x => x.Country, new { @class = "content-text", datarequired = "true", id = "Country" })
            <br /><label rel="Name" class="label hidden red position-absolute">*@Localize.T("Name Required")</label>
        </div>
        <div class="row">
            <div class="col-md-6">
                <span class="content-type">@Localize.T("State")</span>
                <div class="txt-form">
                    @Html.DropDownListFor(x => x.State, (List<SelectListItem>)ViewBag.StateList, new { @class = "content-text select-list", datarequired = "true", id = "State" })
                    <br /><label rel="Name" class="label hidden red position-absolute">*@Localize.T("Name Required")</label>
                </div>
            </div>
            <div class="col-md-6" style="padding-left:0;">
                <span class="content-type">@Localize.T("Zip Code")</span>
                <div class="txt-form content-style">
                    @Html.TextBoxFor(x => x.ZipCode, new { @class = "content-text", datarequired = "true", id = "ZipCode" })
                    <br /><label rel="Name" class="label hidden red position-absolute">*@Localize.T("Name Required")</label>
                </div>
            </div>
        </div>
        <div class="">
            <span class="content-type">@Localize.T("Rate")</span>
            <div class="txt-form">
                @Html.TextBoxFor(x => x.Rate, new { @class = "content-text", datarequired = "true", id = "Rate" })
                <br /><label rel="Name" class="label hidden red position-absolute">*@Localize.T("Name Required")</label>
            </div>
        </div>
        <div class="txt-form">
            <input type="checkbox" id="Monitoring" name="Monitoring" value="@Model.IsMonitoring">IsMonitoring<br>
        </div>
        <div class="txt-form">
            <input type="checkbox" id="Equipment" name="Equipment" value="@Model.IsEquipment">IsEquipment<br>
        </div>
        <div class="txt-form">
            <input type="checkbox" id="Other" name="Other" value="@Model.IsOther">IsOther<br>
        </div>
    </div>
</div>
<section class="footer-section">
    <footer class="footer">
        <div class="SaveCancelDiv">
            <button class="btn" id="SaveCityTax"><i class="fa fa-floppy-o" aria-hidden="true"></i>@Localize.T(" Save")</button>
        </div>
    </footer>
</section>