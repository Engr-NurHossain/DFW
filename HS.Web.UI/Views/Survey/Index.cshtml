
@{
    Layout = "~/Views/Shared/_PrivateLayout.cshtml";
}
<script>
    $(document).ready(function () {
        $(".LoaderWorkingDiv").hide();
    })
</script>
@{
    string url = Request.Url.AbsolutePath;

    if (url.ToLower().IndexOf("/employeesurvey") > -1)
    {
        ViewBag.Title = "CustomerDetails";
        Html.RenderAction("EmployeeSurvey", "Survey", new { ReviewId = ViewBag.ReviewId });
    }else if (url.ToLower().IndexOf("/runsurvey") > -1)
    {
        ViewBag.Title = "CustomerDetails";
        Html.RenderAction("RunSurvey", "Survey", new { SurveyUserId = ViewBag.ReviewId });
    }
    else if (url.ToLower().IndexOf("/surveysettings") == 0)
    {
        ViewBag.Title = "Survey Settings";
        Html.RenderAction("SurveySettingsPartial", "Survey");
    }
}
