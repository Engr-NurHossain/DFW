        if (cvv != myArray) {
            $("#CardSecurityCode").css("border-color", "red");
            return false;
        } else {
            $("#CardSecurityCode").css("border-color", "#ccc");
            return true;
        }
    }
    else {
        var myRe = /^[0-9]{3,3}$/;
        var myArray = myRe.exec(cvv);
        if (cvv != myArray) {
            $("#CardSecurityCode").css("border-color", "red");
            return false;
        } else {
            $("#CardSecurityCode").css("border-color", "#ccc");
            return true;
        }
    }
}
function isEmptyOrSpaces(str) {
