@model IEnumerable<HS.Entities.CustomerCreditCheck>
@{
    Layout = null;
}
@using PermissionList = HS.Framework.UserPermissions
@using PermissionChecker = HS.Web.UI.Helper.PermissionHelper
@using Localize = HS.Web.UI.Helper.LanguageHelper
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>

                <th>
                    <span>Name</span>
                </th>
                @if (PermissionChecker.IsPermitted(PermissionList.MyCompanyPermissions.ShowCreditScore))
                {
                    <th>
                        @Html.DisplayNameFor(model => model.Score)
                    </th>
                }
                @if (PermissionChecker.IsPermitted(PermissionList.MyCompanyPermissions.ShowCreditScoreGrade))
                {
                    <th>
                        <span>Grade</span>
                    </th>
                }
                <th>
                    <span>Transaction ID</span>
                </th>
                <th>
                    <span>Status</span>
                </th>
                <th>
                    <span>Generated By</span>
                </th>
                <th>
                    <span>Time</span>
                </th>
                <th>
                    <span>Description</span>
                </th>
                @if (PermissionChecker.IsPermitted(PermissionList.LeadPermissions.LeadCreditCheckReport))
                {
                    <th>
                        <span>Download</span>
                    </th>
                }

                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
            <tr>

                <td>
                    <div>Name <span>:</span></div>
                    <div><span>@item.FirstName @item.LastName</span></div>
                </td>
                @if (PermissionChecker.IsPermitted(PermissionList.MyCompanyPermissions.ShowCreditScore))
                {
                    int score = 0;
                    int.TryParse(item.Score, out score);
                    <td>
                        <div>@Html.DisplayNameFor(model => model.Score) <span>:</span></div>
                        <div><span>@score</span></div>
                    </td>
                }
                @if (PermissionChecker.IsPermitted(PermissionList.MyCompanyPermissions.ShowCreditScoreGrade))
                {
                    <td>
                        <div>Grade <span>:</span></div>
                        <div><span>@item.Grade</span></div>
                    </td>
                }
                <td>
                    <div>Transaction ID <span>:</span></div>
                    <div><span>@item.TransectionId</span></div>
                </td>
                <td>
                    <div>Status <span>:</span></div>
                    <div><span>@item.Hit</span></div>
                </td>
                <td>
                    <div>Generated By <span>:</span></div>
                    <div><span>@item.CreatedByVal</span></div>
                </td>
                <td>
                    <div>Time <span>:</span></div>
                    <div><span>@item.CreditCheckDate.ToString("MM/dd/yyyy") @Localize.T("at") @item.CreditCheckDate.ToString("hh:mm tt")</span></div>
                </td>
                <td>
                    <div>Description <span>:</span></div>
                    <div><span>@item.CreditCheckDesc</span></div>
                </td>
                @if (PermissionChecker.IsPermitted(PermissionList.LeadPermissions.LeadCreditCheckReport))
                {
                    <td>
                        <div>Download <span>:</span></div>
                        <div><a class="cus-anchor" href="/File/DownloadCreditCheckPdf?id=@item.Id">@item.RepontPdfName</a></div>
                    </td>
                }

            </tr>
            }
        </tbody>

    </table>
}
