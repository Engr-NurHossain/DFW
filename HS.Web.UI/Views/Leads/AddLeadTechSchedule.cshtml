@model HS.Entities.TechSchedule
@{ 
    Layout = null;
}
@using Localize = HS.Web.UI.Helper.LanguageHelper

@Styles.Render("~/styles/AddSchedule")
@Scripts.Render("~/scripts/AddSchedule")
<script src="~/Content/Js/Popups/AddLeadTechSchedule.js"></script>
<style>
    .flu-style{
        padding-left:0;
        padding-right:0;
    }
</style>
<script>
    var Estimated = '@(Model != null?Model.EstimatedArrival :"")';
    if (Estimated != null && Estimated != '') {
        $("#EstimatedArrival").val(Estimated);
    }
</script>
<h3 class="add_schedule_tech_header">@Localize.T("Add New Schedule Tech")</h3>
<div class="container-fluid flu-style">
    @Html.HiddenFor(x => x.Id)
    <input type="hidden" id="LeadCustomerIdVal" value="@ViewBag.leadCustomerid" />
    @*@Html.HiddenFor(x=>x.CompanyId)
        @Html.HiddenFor(x=>x.EmployeeId)*@

    
    <div class="border1">
        <div class="row txt-border">
            <div class="col-md-5">
                <h3 class="txt-form1">@Localize.T("Technician")</h3>
            </div>
            <div class="col-md-6 tech-style">
                @Html.DropDownListFor(model => model.EmployeeId, (List<SelectListItem>)ViewBag.FirstName, new { @class = "form-control txt-arrival select_search", @style = "width:100%;", @id = "FirstName", })

            </div>
        </div>
    </div>
    <div class="">
        <div class="row">
            <div class="col-md-5">
                <h3 class="txt-form">@Localize.T("Install Date")</h3>
            </div>
            <div class="col-md-6 ftxt-drop">
                @Html.TextBoxFor(model => model.InstallDate, "{0:MM/dd/yy}", new { @class = "form-control datepicker", id = "InstallDate", daterequired = "true" })
                @*<label rel="Name" class="label hidden red position-absolute" id="err-date">*Field required*</label>*@
            </div>
        </div>
    </div>
    <div class="">
        <div class="row">
            <div class="col-md-5">
                <h3 class="txt-form-change">@Localize.T("Arrival Time")</h3>
            </div>
            <div class="col-md-6 txt-drop">
                @Html.DropDownListFor(model => model.ArrivalTime, (List<SelectListItem>)ViewBag.Arrival, new { @class = "form-control txt-time select_search", @style = "width:100%;", id = "ArrivalTime", datarequired = "true" })

            </div>
        </div>
    </div>
    <div class="">
        <div class="row">
            <div class="col-md-5">
                <h3 class="txt-form-change">@Localize.T("Departure Time")</h3>
            </div>
            <div class="col-md-6 txt-drop">
                @Html.DropDownListFor(model => model.DepartureTime, (List<SelectListItem>)ViewBag.Arrival, new { @class = "form-control txt-time select_search", @style = "width:100%;", id = "DepartureTime", datarequired = "true" })

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <h3 class="txt-form-change">@Localize.T("Estimated Time")</h3>
        </div>
        <div class="col-md-6 txt-drop">
            @Html.DropDownListFor(model => model.EstimatedArrival, (List<SelectListItem>)ViewBag.EstimatedArrival, new { @class = "form-control txt-time select_search", @style = "width:100%;", id = "EstimatedArrival" })
        </div>
    </div>

    @*<div class="">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="txt-form">Check is Installer</h3>
                </div>
                <div class="col-md-6 col-check">
                    <input class="item-check" type="checkbox" id="chkStatus" />
                </div>
            </div>


        </div>*@
    <section class="footer-section">
        <footer class="footer">
            <div class="SaveCancelDiv">
                <button class="btn btn-save" id="SaveLeadScheduleTech"><i class="fa fa-floppy-o" aria-hidden="true"></i>@Localize.T(" Save")</button>

            </div>
        </footer>
    </section>
</div>
