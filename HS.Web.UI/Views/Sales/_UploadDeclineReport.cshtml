<script>
    $(document).ready(function () {
        $(".deleteDoc").click(function () {
            $(".Upload_Doc").removeClass('hidden');
            $(".LoadPreviewDocument").addClass('hidden');
            $(".LoadPreviewDocument1").addClass('hidden');
            $("#Preview_Doc").attr('src', "");
            $("#Frame_Doc").attr('src', "");
            $("#UploadSuccessMessage").hide();
            $("#description").val("");
        });
    })
</script>
