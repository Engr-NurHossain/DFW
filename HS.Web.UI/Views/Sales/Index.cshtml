@{
    Layout = "~/Views/Shared/_PrivateLayout.cshtml";
}
@using AppConfig = HS.Framework.Utils.AppConfig;
<script>
    $(document).ready(function () {
        $(".LoaderWorkingDiv").hide();
    })
</script>
@{ 
    string DomainSitePath = AppConfig.DomainSitePath;
    string url = Request.Url.AbsolutePath.ToLower();
    if (url.IndexOf(DomainSitePath + "/sales") == 0)
    {
        ViewBag.Title = "Sales";
        Html.RenderAction("AllSalesPartial", "Sales");
    } 
    if (url.IndexOf(DomainSitePath + "/assignarticles") == 0)
    {
        ViewBag.Title = "Assign Articles";
        Html.RenderAction("Classroom", "Sales");
    }
    else if (url.IndexOf(DomainSitePath + "/knowledgebasesettings") == 0)
    {
        ViewBag.Title = "Article Setting";
        Html.RenderAction("ArticleSetting", "Sales");
    }
    else if (url.IndexOf(DomainSitePath + "/knowledgebase") == 0)
    {
        ViewBag.Title = "Sales";
        Html.RenderAction("Knowledgebase", "Sales");
    } 
}

