@{
    Layout = null;
}
@using Localize = HS.Web.UI.Helper.LanguageHelper
@model HS.Entities.InvoiceDetail
<link href="~/Content/Css/Shared/Header.css" rel="stylesheet" />
<link href="~/Content/DatePicker/Css/datepicker.min.css" rel="stylesheet" />
<link href="~/Content/DatePicker/Css/datepicker3.min.css" rel="stylesheet" />
<script src="~/Content/Js/Popups/AddNotes.js"></script>
<script src="~/Content/Js/Site/Validation.js"></script>
<script>
    $(".datepicker").datepicker({
        //timepicker:false
    });
</script>

<style>
    .form-group {
        margin: 0;
        padding: 0;
    }

        .form-group h3 {
            margin-left: 30px;
            font-size: 2rem;
            font-weight: 400;
            color: #393a3d;
        }

    .content-type {
        margin-left: 30px;
        font-size: 14px;
        font-weight: 600;
        color: #404040;
        display: block;
        margin-bottom: 4px;
    }

    .content-text {
        height: 32px;
        width: 80%;
        font-size: 13px;
    }

    .SaveCancelDiv {
        width: 95%;
        padding-top: 8px;
    }

    .custom-col {
        width: 18%;
    }

    .footer-section {
        background: #eceef1;
        height: 50px;
        position: fixed;
        width: 100%;
        bottom: 0%;
    }

    .txt-form {
        margin-left: 30px;
        margin-right:30px;
    }

    .item-check {
        height: 40px;
        width: 20px;
    }

    .txt-check {
        vertical-align: middle;
        color: rgba(0, 0, 0, 0.75);
        position: absolute;
        top: 14px;
        padding-left: 4px;
    }

    .col-cus {
        margin-left: 30px;
    }

    #ParentId {
        height: 32px;
        width: 80%;
        margin-left: 30px;
        width: 76%;
    }
    .btn-snote{
        float:right;
        background-color:green;
        color:white;
    }
    .btn-snote:hover{
        color:white;
    }
    .txt-date{
        margin-left:30px;
        width:55%;
    }
</style>

<div class="container-fluid"> 
    <input type="hidden" id="CustomerIdVal" value="@ViewBag.CustomerId" />
    
    <div class="form-group">
        <h3>Customer Notes Infomation</h3>
    </div>

    <div class="clearfix">
        &nbsp;
    </div>
    <div class="form-group clearfix">


        <span class="content-type">@Localize.T("Notes")</span>


        <div class="txt-form">
            @Html.TextAreaFor(model => model.Notes, new { @class = "form-control notes-control", id = "Notes", datarequired="true" })
            <br /><label rel="Name" class="label hidden red position-absolute"></label>
        </div>
        <span class="content-type">@Localize.T("Reminder Date")</span>
        <div class="txt-date">
            @Html.TextBoxFor(model => model.ReminderDate, new { @class = "form-control datepicker", id = "ReminderDate", daterequired = "true" })
            <br /><label rel="Name" class="label hidden red position-absolute"></label>
        </div>
    </div>

</div>

<section class="footer-section">
    <footer class="footer">
        <div class="SaveCancelDiv">
            <button class="btn btn-snote" id="SaveNotes"><i class="fa fa-floppy-o" aria-hidden="true"></i>@Localize.T(" Save")</button>
        </div>
    </footer>
</section>
