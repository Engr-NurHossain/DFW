@{
    Layout = null;
}
@model HS.Entities.SalesMatrix
@using AppConfig = HS.Framework.Utils.AppConfig;
@using Localize = HS.Web.UI.Helper.LanguageHelper


@Styles.Render("~/styles/AddSalesMatrix")
@Scripts.Render("~/scripts/AddSalesMatrix")
<style>
    .input-group {
        width: 100%;
    }
</style>

<div class="add_sales_matrix_header">
    <div>@Localize.T("Sales Matrix Information")</div>
</div>
<div class="add_sales_matrix_container">
    @Html.HiddenFor(x => x.Id)

    <div class="clearfix">
        <div class="add_sales_matrix_row">
            <label>@Localize.T("Type")</label>
            <div class="add_sales_matrix_margin">
                @Html.DropDownListFor(x => x.Type, (List<SelectListItem>)ViewBag.SalesMatrixType, new { @class = "form-control ", datarequired = "true" })
                <label rel="Name" class="label hidden red position-absolute">*@Localize.T("Type Required")</label>
            </div>
        </div>


        <div class="add_sales_matrix_row">
            <label>@Localize.T("Min")</label>
            <div class="add_sales_matrix_margin">
                <div class="input-group">
                    <input class="form-control" type="number" value="@Math.Round(Model.Min,3)" placeholder="@Localize.T("Min")" id="Min" />
                </div>
            </div>
        </div>

        <div class="add_sales_matrix_row">
            <label>@Localize.T("Max")</label>
            <div class="add_sales_matrix_margin">
                <div class="input-group">
                    <input class="form-control" type="number" value="@Math.Round(Model.Max,3)" placeholder="@Localize.T("Max")" id="Max" />
                </div>
            </div>
        </div>

        <div class="add_sales_matrix_row">
            <label>@Localize.T("UserX")</label>
            <div class="add_sales_matrix_margin">
                <div class="input-group">
                    <input class="form-control" type="number" value="@Math.Round(Model.UserX,3)" placeholder="@Localize.T("UserX")" id="UserX" />
                </div>
            </div>
        </div>

        <div class="add_sales_matrix_row">
            <label>@Localize.T("Difference")</label>
            <div class="add_sales_matrix_margin">
                @if (Model.Difference != null)
                {
                    <div class="input-group">
                        <input class="form-control" type="number" value="@Math.Round(Model.Difference.Value,3)" placeholder="@Localize.T("Difference")" id="Difference" />
                    </div>
                }
                else
                {
                    <div class="input-group">
                        <input class="form-control" type="number" value="" placeholder="@Localize.T("Difference")" id="Difference" />
                    </div>
                }

            </div>
        </div>

    </div>
</div>


<section class="footer-section">
    <footer class="footer">
        <div class="SaveCancelDiv">
            <button class="btn" id="SaveSalesMatrix"><i class="fa fa-floppy-o" aria-hidden="true"></i>@Localize.T(" Save")</button>

        </div>
    </footer>
</section>