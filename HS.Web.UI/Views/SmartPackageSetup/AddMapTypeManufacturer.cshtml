@{
    Layout = null;
}
@model HS.Entities.SystemTypeManufacturerMap
@using Localize = HS.Web.UI.Helper.LanguageHelper

<script src="~/Content/Js/Site/Validation.js"></script>
<script src="~/Content/Js/PackageSetup/AddSystemTypeManufacturerMap.js"></script>
<link href="~/Content/Css/PackageSettings/AddPackage.css" rel="stylesheet" />
<div class="add_package_settings_header">
    @Localize.T("Map Smart Package Settings")
</div>
<div class="container-fluid">
    @Html.HiddenFor(x => x.Id, new { Id = "Id" })
    <div class="form-group clearfix">
        <label>@Localize.T("System Type")<span class="red">*</span></label>
        @Html.DropDownListFor(x => x.SystemId, (List<SelectListItem>)ViewBag.SmartSystemTypeList, new { @class = "form-control PackageId_select2", datarequired = "true" })
        <label rel="PackageId" class="label hidden red position-absolute">*@Localize.T("Please Select a system type")</label>
    </div>

    <div class="form-group clearfix">
        <label>@Localize.T("Manufacturer")<span class="red">*</span></label>
        @Html.DropDownListFor(x => x.ManufacturerId, (List<SelectListItem>)ViewBag.ManufacturerList, new { @class = "form-control dropdown_equipment", datarequired = "true" })
        <label rel="ManufacturerId" class="label hidden red position-absolute">*@Localize.T("Please Select An Manufacturer")</label>
    </div>
</div>

<section class="footer-section">
    <footer class="footer">
       
            <button class="btn-save-package" id="saveMapSystemManu">@Localize.T("Save")</button>
       
    </footer>
</section>

