@{
    Layout = null;
}
@model HS.Entities.SystemTypeServiceMap
@using Localize = HS.Web.UI.Helper.LanguageHelper

<script src="~/Content/Bootstrap/MultipleSelect/bootstrap-select.js"></script>
<script src="~/Content/Js/Site/Validation.js"></script>
<script src="~/Content/Js/PackageSetup/AddSystemTypeManufacturerService.js"></script>
<script src="~/Content/Select2/Select2.min.js"></script>
<link href="~/Content/Css/PackageSettings/AddPackage.css" rel="stylesheet" />
<link href="~/Content/Bootstrap/MultipleSelect/bootstrap-select.css" rel="stylesheet" />
<div class="add_package_settings_header">
    @Localize.T("Map Smart Package Settings")
</div>
<div class="container-fluid">
    @Html.HiddenFor(x => x.Id, new { Id = "Id" })
    <div class="form-group clearfix">
        <label>@Localize.T("System Type")<span class="red">*</span></label>
        @Html.DropDownListFor(x => x.SystemTypeId, (List<SelectListItem>)ViewBag.SmartSystemTypeList, new { @class = "form-control PackageId_select2", datarequired = "true" })
        <label rel="SystemTypeId" class="label hidden red position-absolute">*@Localize.T("Please Select a system type")</label>
    </div>
    <div class="form-group clearfix">
        <label>@Localize.T("Package")<span class="red">*</span></label>
        @Html.DropDownListFor(x => x.PackageId, (List<SelectListItem>)ViewBag.PackageList, new { @class = "form-control selectpicker", datarequired = "true", @multiple = "multiple" })
        <label rel="PackageId" class="label hidden red position-absolute">*@Localize.T("Please Select a package")</label>
    </div>
    <div class="form-group clearfix">
        <label>@Localize.T("Service")<span class="red">*</span></label>
        @Html.DropDownListFor(x => x.EquipmentId, (List<SelectListItem>)ViewBag.ServiceList, new { @class = "form-control selectpicker", datarequired = "true", @multiple = "multiple" })
        <label rel="EquipmentId" class="label hidden red position-absolute">*@Localize.T("Please Select An Equipment")</label>
    </div>
</div>

<section class="footer-section">
    <button class="btn-save-package" id="saveMapSystemService">@Localize.T("Save")</button>
</section>


