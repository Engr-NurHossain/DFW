@{
    Layout = null;
}
@model HS.Entities.SmartPackageEquipmentService
@using Localize = HS.Web.UI.Helper.LanguageHelper

<script src="~/Content/Js/Site/Validation.js"></script>
<script src="~/Content/Select2/Select2.min.js"></script>
<link href="~/Content/Select2/select2.css" rel="stylesheet" />
<link href="~/Content/Css/PackageSettings/AddPackageInclude.css" rel="stylesheet" />
<script src="~/Content/Js/AddEquipment/EquipmentSelect2.js"></script>
<script src="~/Content/Js/PackageSetup/AddNewSmartPackageInclude.js"></script>
<script>
    if ('@ViewBag.Check' == 1) {
        $("#packatab").removeClass("hidden");
    }
</script>
<style>
    .DropLoader {
        width: 91%;
        height: 13%;
        margin-right: 20px;
        position: absolute;
        top: 150px;
        background-color: gray;
        opacity: .6;
        z-index: 10;
    }
    .DropLoader span {
        padding: 25%;
        color: #fff;
    }
</style>

<div class="add_package_include_header">
    @Localize.T("Smart Package Include Equipment")
</div>
<div class="container-fluid">
    @Html.HiddenFor(x => x.Id, new { Id = "Id" })

    <div class="form-group clearfix hidden" id="packatab">
        <label>@Localize.T("Package")<span class="red">*</span></label>
        @Html.DropDownListFor(x => x.PackageId, (List<SelectListItem>)ViewBag.PackageList, new { @class = "form-control PackageId_select2", datarequired = "true", onchange = "InitializeSuburbDropdown($('.dropdown_equipment'), this.value, '1')" })
        <label rel="PackageId" class="label hidden red position-absolute">*@Localize.T("Please Select a Package")</label>
    </div>

    <div class="form-group clearfix">
        <label>@Localize.T("Equipment")<span class="red">*</span></label>
        <div class="DropLoader" style="display: none;"><span><img style="float: right; left: 285px; position: absolute;" src="~/Content/Tiny/skins/lightgray/img/loader.gif" /></div>
        @Html.DropDownListFor(x => x.EquipmentId, (List<SelectListItem>)ViewBag.EquipmentList, new { @class = "form-control dropdown_equipment",  datarequired = "true" })
        <label rel="PackageId" class="label hidden red position-absolute">*@Localize.T("Please Select An Equipment")</label>
    </div>
    <div class="form-group clearfix">
        <label>@Localize.T("Number of Equipment")<span class="red">*</span></label>
        @Html.TextBoxFor(x => x.EptNo, new { @class = "form-control", datarequired = "true",type = "number" ,placeholder ="Number of Equipment"})
        <label rel="PackageId" class="label hidden red position-absolute">*@Localize.T("Please Select Number of Equipment")</label>
    </div>
</div>

<section class="footer-section">
    <footer class="footer">
        <div class="save-package-div">
            <button class="btn-save-package-include" id="savePackageInclude">@Localize.T("Save")</button>
        </div>
    </footer>
</section>
