@model List<HS.Entities.ThirdPartySetting>
@{
    Layout = null;
}
@using Localize = HS.Web.UI.Helper.LanguageHelper
@Styles.Render("~/styles/Mmrs")
@*@Scripts.Render("~/scripts/Mmrs")*@
<link href="~/Content/Css/AuthorizeDotNet/AuthorizeDotNet.css" rel="stylesheet" />
<script src="~/Content/Js/AddAuthorizeSetting/AddAuthorizeSetting.js"></script>
<script src="~/Content/datatable/jquery.dataTables.min.js"></script>
<script src="~/Content/datatable/dataTables.bootstrap.js"></script>
<style>
    .fluid-style {
        padding-left: 15px;
        padding-right: 15px;
    }
</style>
<div class="fluid-style">
    <div class="row header_margin">
        <div class="left_container">@*<h3 class="txt-content">@Localize.T("Authorize.Net Setting Information")</h3>*@</div>
        <div class="right_container"><button class="AddAuthorize">
                                         <i class="fa fa-plus-circle" aria-hidden="true"></i> @Localize.T(" New")
            </button></div>
    </div>
   
        <div class="row header_margin Authorize-table">
        <table id="tblAuthorize">
            <thead class="table-head-border hidden_class_for_mobile">
                <tr>
                    <th class="thead-th-style sorting">
                        @Localize.T("Name")
                    </th>
                    <th class="thead-th-style sorting">
                        @Localize.T("Value")
                    </th>
                    <th class="thead-th-style sorting">
                        @Localize.T("Action")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="tr-style">
                        <td class="table-body-td-style" valign="top">
                            <label class="authorize_header_for_mobile">@Localize.T("Name") </label>
                            <span class="authorize_info_style">
                                <a href="javascript:void(0)" class="item-edit-Authorize name-anchor-style" data-id="@item.Id" style="color:#2ca01c;">

                                    @item.Name
                            </a>
                        </span>
                    </td>
                    <td class="table-body-td-style" valign="top">
                        <label class="authorize_header_for_mobile">@Localize.T("Value") </label>
                        <span class="authorize_info_style">@item.Value</span>
                    </td>
                    <td class="table-body-td-style" valign="top">
                        <label class="authorize_header_for_mobile">@Localize.T("Actions") </label>

                        <span class="authorize_info_style">
                            <a href="javascript:void(0)" class="item-delete-Authorize name-anchor-style" data-id="@item.Id" title="@Localize.T("Delete")">
                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                            </a>
                        </span>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
