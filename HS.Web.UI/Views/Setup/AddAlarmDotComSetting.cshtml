@model HS.Entities.ThirdPartySetting
@{ 
    Layout = null;
}
@using Localize = HS.Web.UI.Helper.LanguageHelper
<script src="~/Content/Js/Site/Validation.js"></script>
<script src="~/Content/Js/Popups/AddAlarmDotComSetting.js"></script>
<link href="~/Content/Css/AddAlarmDotCom/AddAlarmDotCom.css" rel="stylesheet" />
@Html.HiddenFor(x => x.Id)
@if (Model.Id > 0)
{
    <div class="alarm_head_container">
        <span class="alarm_head_text">@Localize.T("Edit Setting")</span>
    </div>
}
else
{
    <div class="alarm_head_container">
        <span class="alarm_head_text">@Localize.T("Add Setting")</span>
    </div>
}

<div class="add_alarm_container">
   

    <div class="row add_alarm_margin">
        <div class="col-xs-12">
            <span class="style-span">@Localize.T("Name")<span class="red">*</span></span>
            <div class="txt-form-style">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", datarequired = "true" })
                <label rel="Name" class="label hidden red position-absolute">*@Localize.T("Name Required")</label>
            </div>
        </div>
    </div>
    <div class="row add_alarm_margin">
        <div class="col-xs-12">
            <span class="style-span">@Localize.T("Value")<span class="red">*</span></span>
            <div>
                @Html.TextBoxFor(x => x.Value, new { @class = "form-control", datarequired = "true" })
                <label rel="Value" class="label hidden red position-absolute">*@Localize.T("Value Required")</label>
            </div>
        </div>
    </div>   
</div>
<section class="footer-section">
    <footer class="footer">
        <div class="SaveCancelDiv">
            <button class="btn" id="SaveAlarm"><i class="fa fa-floppy-o" aria-hidden="true"></i>@Localize.T(" Save")</button>
        </div>
    </footer>
</section>