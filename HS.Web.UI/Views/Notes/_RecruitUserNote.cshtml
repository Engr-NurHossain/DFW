@{
    Layout = null;
}
@using Localize = HS.Web.UI.Helper.LanguageHelper
@model List<HS.Entities.EmployeeNote >

@Styles.Render("~/styles/DataTableBundles")
@Scripts.Render("~/scripts/DataTableBundles")
<style>
    #tblEmployeeNote{
        width:100%;
    }
</style>
<script>
    var DataTablePageSize = 50;
    var selectedDeleteId = 0;
    var empid = @ViewBag.empid;
    var DeleteEmployeeNote = function () {
        var delitem = selectedDeleteId;
        $.ajax({
            url:domainurl +  "/Notes/DeleteEmployeeNote",
            data: { Id: delitem, empid: empid },
            type: "Post",
            dataType: "Json",
            success: function (data) {
                if(data.result == true){
                    parent.$("#notesTab").load(domainurl + "/Notes/RecruitUserNote?id=" + data.empid);
                }
            },
            error: function () {
            }
        });
    }
    $(document).ready(function () {
        var table = $('#tblEmployeeNote').DataTable({
            "pageLength": DataTablePageSize,
            "destroy": true,
            "language": {
                "emptyTable": "No data available"
            }
        });
        $("#AddEmployeeNote").click(function () {
            OpenRightToLeftModal(domainurl + "/Notes/AddRecruitUserNote?id=0&empid=@ViewBag.empid");
        })
        $(".note-edit").click(function () {
            var notval = $(this).attr('data-id');
            OpenRightToLeftModal(domainurl + "/Notes/AddRecruitUserNote?id=" + notval + "&empid=@ViewBag.empid");
        })
        $(".del-note").click(function(){
            selectedDeleteId = $(this).attr('data-id');
            OpenConfirmationMessageNew("Confirm?", "Are you sure you want to delete this note?", DeleteEmployeeNote);
        })
    })
</script>

<div class="header-content">
    <div class="left-content"></div>
    <div class="right-content">
        <button class="btn btn-primary" id="AddEmployeeNote"><i class="fa fa-plus-circle" aria-hidden="true"></i>@Localize.T(" New")</button>
    </div>
</div>
<div class="custom-table">
    <table id="tblEmployeeNote">
        <thead>
            <tr>
                <th class="thead-th-style">@Localize.T("Created by user")</th>
                <th class="thead-th-style">@Localize.T("Created On")</th>
                <th class="thead-th-style">@Localize.T("Note")</th>
                <th class="thead-th-style">@Localize.T("Reminder On")</th>
                <th class="thead-th-style">@Localize.T("Email / Text")</th>
                <th class="thead-th-style">@Localize.T("Actions")</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr class="tr-style">
                    <td class="table-body-td-style" valign="top">
                        <span><a href="javascript:void(0)" class="note-edit" data-id="@item.Id" style="color:#2ca01c;">@item.CreatedBy</a></span>
                    </td>
                    <td class="table-body-td-style" valign="top">
                        <span>@item.CreatedDate.ToString("MM/dd/yy") @Localize.T("at") @item.CreatedDate.ToString("hh:mm tt")</span>
                    </td>
                    <td class="table-body-td-style" valign="top">
                        <span>@item.Notes</span>
                    </td>
                    <td class="table-body-td-style" valign="top">
                        <span>@item.ReminderDate.Value.ToString("MM/dd/yy")</span>
                    </td>
                    <td class="table-body-td-style" valign="top">
                        @if (item.IsEmail == true)
                        {
                            <span>@Localize.T("Email")</span>
                        }
                        @if (item.IsText == true)
                        {
                            <span>@Localize.T("Text")</span>
                        }
                    </td>
                    <td class="table-body-td-style" valign="top">
                        <a href="javascript:void(0)" class="del-note" data-id="@item.Id" title="@Localize.T("Delete")"><i class="fa fa-trash-o"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>