
@{
    Layout = "~/Views/Shared/_PrivateLayout.cshtml";
}
<script>
    $(document).ready(function () {
        $(".LoaderWorkingDiv").hide();
    })
</script>
@{
    string url = Request.Url.AbsolutePath;
    if (url.ToLower().IndexOf("/activity/activitydetail") > -1)
    {
        ViewBag.Title = "ActivityDetails";
        Html.RenderAction("ActivityDetails", "Activity", new { id = ViewBag.Id });
    }
    if (url.ToLower().IndexOf("/activities") > -1)
    {
        ViewBag.Title = "Activities";
        Html.RenderAction("Activities", "Activity", new { id = ViewBag.Id });
    }
}
