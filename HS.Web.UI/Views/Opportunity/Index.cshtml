
@{
    Layout = "~/Views/Shared/_PrivateLayout.cshtml";
}
<script>
    $(document).ready(function () {
        $(".LoaderWorkingDiv").hide();
    })
</script>

@{
    string url = Request.Url.AbsolutePath;

    if (url.ToLower().IndexOf("/opportunities") > -1)
    {
        ViewBag.Title = "Opportunities";
        Html.RenderAction("Opportunities", "Opportunity", new { id = ViewBag.Id });
    }
    if (url.ToLower().IndexOf("/opportunity/opportunitydetail") > -1)
    {
        ViewBag.Title = "OpportunityDetails";
        Html.RenderAction("OpportunityDetailTab", "Opportunity", new { id = ViewBag.Id });
    }
}
