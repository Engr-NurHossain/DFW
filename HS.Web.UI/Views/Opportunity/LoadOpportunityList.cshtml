                                {
                                <div>
                                    @Localize.T("Type: ")
                                    <span>@item.TypeVal</span>
                                </div>
                                }
                                                @if (!string.IsNullOrEmpty(item.DisplayName))
                                {
                                <div>
                                    @Localize.T("Account Name: ")
