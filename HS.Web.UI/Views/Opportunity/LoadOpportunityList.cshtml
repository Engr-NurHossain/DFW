                                }
                                                @if (!string.IsNullOrEmpty(item.Competitors))
                                  {
                                <div>
                                    @Localize.T("Competitors: ")
                                    <span>@item.Competitors</span>
                                </div>
                                  }
                                            </div>

                                        </td>
                                        @*<td>@item.TypeVal</td>
                                <td>@item.LeadSourceVal</td>*@
