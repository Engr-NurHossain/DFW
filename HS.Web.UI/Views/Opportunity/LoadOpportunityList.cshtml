                                {
                                  
                                    <div class="opp_info">
                                        @Localize.T("Account Owner: ")
                                        <span>@item.AccountOwnerName</span>
                                    </div>

                                }
                            </td>
                        }
                        @if (item.CreatedDate != new DateTime())
                        {
                            <td>
                                <div class="opp_header">@Localize.T("Created Date") <span>:</span></div>
