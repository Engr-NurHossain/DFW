@model List<HS.Entities.DashboardInstallationListViewModel>
@using Localize = HS.Web.UI.Helper.LanguageHelper

<style>
    .ServiceBoard-container {
        width: 100%;
        float:left;
    }

    .ServiceBoard-List-container {
        width: 100%;
        margin: auto;
    }
    .ServiceBoard-List-header {
     width: 100%;
    float: left;
    display: table;
    margin-top: 3px;
    border-bottom:1px solid #ccc;
    }
    .ServiceBoard-List-Body {
    width: 100%;
    float: left;
    display: table;
    }
    .ServiceBoard-List-header > div {
        text-align:center;
        font-weight:600;
        padding-top:5px;
        padding-bottom:5px;
    }
    .ServiceBoard-List-Body {
        border-bottom:1px solid #ccc;
    }

    .ServiceBoard-List-Body > div:nth-child(2), .ServiceBoard-List-header > div:nth-child(2){
        width:25%;
    }
     .ServiceBoard-List-Body > div:nth-child(3), .ServiceBoard-List-header > div:nth-child(3){
        width:25%;
    }
     .ServiceBoard-List-Body > div:nth-child(5), .ServiceBoard-List-header > div:nth-child(5){
         width:10%;
     }
    .panel-body {
        padding:0px 5px  !important;
    }
    .ServiceBoard-List-header-contents-style {
        width: 20%;
        float: left;
    }

    .ServiceBoard-List-Body-contents-style {
        width: 20%;
        float: left;
    }
</style>

<script>
    $(document).ready(function () {
        parent.$(".installer-board-loader").addClass('hidden');
        parent.$(".dashboard-Installation-list").removeClass('hidden');
    });
</script>

<div class="ServiceBoard-container">
    @if (Model.Count > 0 && Model != null)
    {
        <div class="ServiceBoard-List-container">
            <div class="ServiceBoard-List-header">
                <div class="ServiceBoard-List-header-contents-style">
                    @Localize.T("Date")
                </div>
                <div class="ServiceBoard-List-header-contents-style">
                    @Localize.T("Customer")
                </div>
                <div class="ServiceBoard-List-header-contents-style">
                    @Localize.T("Installer")
                </div>
                <div class="ServiceBoard-List-header-contents-style">
                    @Localize.T("Time")
                </div>
                <div class="ServiceBoard-List-header-contents-style">
                    @Localize.T("Event")
                </div>
            </div>

            @foreach (var item in Model)
            {
                <div class="ServiceBoard-List-Body">
                    <div class="ServiceBoard-List-Body-contents-style">
                        @item.AppointmentDate.ToString("MM/dd/yy")
                    </div>
                    @{
                        var FormattedName = item.CustomerFirstName + " " + item.CustomerLastName;
                        if (!string.IsNullOrEmpty(item.CustomerMiddleName))
                        {
                            FormattedName = item.CustomerFirstName + " " + item.CustomerMiddleName + " " + item.CustomerLastName;
                        }
                    }
                    <div class="ServiceBoard-List-Body-contents-style">
                        @FormattedName
                    </div>
                    <div class="ServiceBoard-List-Body-contents-style">
                        @item.EmployeeName
                    </div>
                    <div class="ServiceBoard-List-Body-contents-style">
                        @item.AppointmentTime
                    </div>
                    <div class="ServiceBoard-List-Body-contents-style">
                        <i class="fa fa-calendar" aria-hidden="true"></i>
                    </div>
                </div>
                        }
        </div>
                        }
                        else
                        {
                            @Localize.T("No data found")
                        }
</div>

