        $("#TechReceiveTab").html(LoaderAnimation);
        $("#TransferLogTab").html(LoaderAnimation);
        $("#EquipHistoryTab").html(LoaderAnimation);
        $("#WH_HistoryTab").html(LoaderAnimation);
        
    }
