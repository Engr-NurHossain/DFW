        SetAllTimeClockTabsEmpty();
        /*$("#TechReceiveTab").load(domainurl + "/Inventory/InventoryTechReceivePartial");*/
        $("#TechReceiveTab").load(domainurl + "/Inventory/TechTransferPartial");
    }
    var OpenBadInventoryTab = function () {
