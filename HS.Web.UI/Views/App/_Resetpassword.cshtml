@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/Icons/@(HS.Framework.Utils.AppConfig.HomePageImage)/favicon.ico">
    <title>@(HS.Framework.Utils.AppConfig.PublicPageTitle) | Login </title>
    <script src="~/Content/Js/Login/domainurl.js"></script>
    @Styles.Render("~/styles/layout")
    @Styles.Render("~/styles/privatelayout")
    @Scripts.Render("~/scripts/layout")
    @Scripts.Render("~/scripts/login")
    <style>
        .text-security-disk {
            -webkit-text-security: disc !important;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" disabled id="UserName" name="usernameemail" readonly type="email" onfocus="if (this.hasAttribute('readonly')) { this.removeAttribute('readonly');
                                     this.blur();    this.focus();  }" />
                                </div>
                                <div class="form-group">
                                    <input class="form-control text-security-disk" autocomplete="off" placeholder="Current Password" id="currentPassword" name="password" readonly type="password" onfocus="if (this.hasAttribute('readonly')) { this.removeAttribute('readonly');
                                      // fix for mobile safari to show virtual keyboard
                                      this.blur();    this.focus();  }" />
                                </div>
                                <div class="form-group">
                                    <input class="form-control text-security-disk" autocomplete="off" placeholder="New Password" id="NewPassword" name="Newpassword" readonly type="password" onfocus="if (this.hasAttribute('readonly')) { this.removeAttribute('readonly');
                                      // fix for mobile safari to show virtual keyboard
                                      this.blur();    this.focus();  }" />
                                </div>
                                <div class="form-group">
                                    <input class="form-control text-security-disk" autocomplete="off" placeholder="Confirm Password" id="ConfirmPassword" name="Confirmpassword" readonly type="password" onfocus="if (this.hasAttribute('readonly')) { this.removeAttribute('readonly');
                                      this.blur();    this.focus();  }" />
                                </div> 
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <button type="button" class="btn btn-info btn-lg hidden" id="LoginFailed" data-toggle="modal" data-target="#myModal">Open Modal</button>

    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog"> 
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Error!</h4>
                </div>
                <div class="modal-body">
                    <p>Login Failed.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
