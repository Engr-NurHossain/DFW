@{
    Layout = null;
}
@model HS.Entities.Marchant
@using Localize = HS.Web.UI.Helper.LanguageHelper

<link href="~/Content/Bootstrap/css/bootstrap.css" rel="stylesheet" /> 
<link href="~/Content/Css/Popups/SmallPopups.css" rel="stylesheet" />
<script src="~/Content/JQuery/jquery-3.2.1.min.js"></script>
<script src="~/Content/Js/Site/Validation.js"></script>
<script src="~/Content/Js/Popups/AddMarchant.js"></script>

<div class="container contents">
    @Html.HiddenFor(x=>x.Id)
    <div class="form-group text-center">
        <h3>Add Marchant</h3>
    </div>
    <div class="CloseButtonDiv" onclick="parent.ClosePopup()">
        <img title="@Localize.T("Close")" src="~/Content/Icons/cross_update.png" />
    </div>
    <div class="clearfix">
        &nbsp;
    </div>
    <div class="form-group clearfix">
        <div class="width-33p">
            <span>Name</span>
        </div>
        <div class="width-67p">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", datarequired = "true" })
            <label rel="Name" class="label hidden red position-absolute">*@Localize.T("Name Required")</label>
        </div>
    </div>
    <div class="form-group clearfix">
        <div class="width-33p">
            <span>Order</span>
        </div>
        <div class="width-67p">
            @Html.TextBoxFor(x => x.OrderBy, new { @class = "form-control", datarequired = "true", type = "number" })
            <label rel="OrderBy" class="label hidden red position-absolute">*@Localize.T("Sort order required")</label>
        </div>
    </div>
    <div>
        &nbsp;
    </div>
    <div class="custom-hr"></div>
    <div class="SaveCancelDiv">
        <button class="btn btn-danger" id="Cancel">@Localize.T("Cancel")</button>
        <button class="btn btn-success" id="SaveManufacturer"><i class="fa fa-floppy-o" aria-hidden="true"></i>@Localize.T(" Save")</button>
    </div>
</div>
