@model HS.Entities.AgreementQuestionAnswerPDFModel
@{
    Layout = null;
    var count = 1;
}
<div style="width:100%;float:left; text-align:center; padding:10px; box-sizing:border-box; font-size:25px; background-color:#f4f5f8; border-bottom:1px solid #ccc; margin-bottom:10px;">Agreement Answer</div>
@{
    foreach (var item in Model.AgreementQuestion)
    {
        if (Model.AgreementAnswer.Where(x => x.QuestionId == item.QuestionId).FirstOrDefault() != null)
        {
            <div style="width:100%;float:left; text-align:left; padding:20px 10px; box-sizing:border-box; font-size:18px;">
                <div style="width: 100%; float: left;box-sizing:border-box;"><div style="margin-right:10px; width:95px; float:left; font-weight:bold; box-sizing:border-box;">Question:</div><span>@item.Title</span></div>
                <div style="width: 100%; float: left;box-sizing:border-box;">
                    @if (Model.AgreementAnswer.Where(x => x.QuestionId == item.QuestionId).FirstOrDefault().Answer.ToLower() == "true")
                    {
                        <div style="margin-right: 10px; width: 95px; float: left; font-weight: bold; box-sizing: border-box;">Answer:</div> <span style="color: #2ca01c;">Yes</span>
                    }
                    else
                    {
                        <div style="margin-right:10px; width:95px; float:left; font-weight:bold; box-sizing:border-box;">Answer:</div> <span style="color: #d71920;">No</span>
                    }
                </div>
            </div>
        }
    }
}
